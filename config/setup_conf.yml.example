#
# EXAMPLE FILE
# You MUST edit this file before setting up the application
#

# Development setup configurations
development: &development

  # Admin account
  # You can change the password after the initial setup from within the application.
  admin_login: "mconf"
  admin_fullname: "Mconf Admin"
  admin_email: "admin@mconf.com"
  admin_password: "admin"

  # BigBlueButton default server configuration
  # This server will be your first and default server
  bbb_server_name: 'Default Server'
  bbb_server_url: 'http://my-development-server/bigbluebutton/api'
  bbb_server_salt: 'mysalt'
  bbb_server_version: '0.7'

  # Email account used to send all emails from within the application (invitations,
  # registrations confirmations, etc). For now you have to use a Gmail account.
  # See config/initializers/mail_conf.rb
  sendmail_username: "myusername@gmail.com"
  sendmail_password: "mypassword"

  # Website default configuration
  # The information will be used to create the Site model. They can be altered
  # after the initial setup using the management are in the application.
  site_name: "Mconf Development"
  site_domain: "localhost"
  site_presence_domain: "localhost"
  site_events_chat_service: "events.localhost"
  site_email: "contact@mconf.com"

  # Default space: it will be created as a default public space, something like
  # "a space for all members of this website"
  space_name: "Mconf-Web Space"
  space_description: "Mconf-Web users space"

# Production setup configurations
production:
  admin_login: "mconf"
  admin_fullname: "Mconf Admin"
  admin_email: "admin@mconf.com"
  admin_password: "admin"
  bbb_server_name: 'Default Server'
  bbb_server_url: 'http://my-production-server/bigbluebutton/api'
  bbb_server_salt: 'mysalt'
  bbb_server_version: '0.7'
  sendmail_username: "myusername@gmail.com"
  sendmail_password: "mypassword"
  site_name: "Mconf"
  site_domain: "localhost"
  site_presence_domain: "localhost"
  site_events_chat_service: "events.localhost"
  site_email: "contact@mconf.com"
  space_name: "Mconf-Web Space"
  space_description: "Mconf-Web users space"

test:
  <<: *development

