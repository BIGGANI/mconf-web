#space-invitation-email
  .header
    = t('.message.header', :sender => @user.full_name, :email_sender => @user.email, :space => @space.name).html_safe

  - unless @invitation.comment.blank?
    .invite-message= @invitation.comment

  .link
    = t('.message.link', :url => space_join_request_url(@invitation.group, @invitation.id, :host => Site.current.domain), :space_url => space_url(@space)).html_safe