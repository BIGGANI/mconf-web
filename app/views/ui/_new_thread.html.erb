<h3>Add a new Thread</h3>
  <div id="post-buttoms">
    <ul>
  	  <li><%= link_to_function 'Comment', "new Element.toggle('new_comment_form');new Element.hide('new_photo_form');new Element.hide('new_doc_form');"%></li>
	  <li><%= link_to_function 'Photos', "new Element.toggle('new_photo_form');new Element.hide('new_comment_form');new Element.hide('new_doc_form');"%></li>
	  <li><%= link_to_function 'Docs', "new Element.toggle('new_doc_form');new Element.hide('new_comment_form');new Element.hide('new_photo_form');"%></li>
      <li><%= link_to_function 'Reply', "new Element.toggle('add_new_reply');new Element.hide('add_new_thread');"%></li>
	</ul>
  </div>
<% form_for(:post, :url => space_posts_path(@space), :html => { :multipart => true }) do |f| -%>
  <p>
    <label for="Title">Title</label><br/>
    <%= f.text_field :title, :size => 25 %>
  </p>
    <div id="new_comment_form">
      <%= render :partial => "ui/form_comment", :object => f %>
	</div>
	
	<div id="new_photo_form" style="display: none;">
	  <%= render :partial => "ui/form_photo", :object => f %>
	</div>
	
	<div id="new_doc_form" style="display: none;">
	  <%= render :partial => "ui/form_doc", :object => f %>
	</div>
    <%= submit_tag "Post Now!" %>
  <% end -%>