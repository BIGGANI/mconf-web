- spaces_menu_at :events
= content_for :menu do
  = render :partial => 'spaces/menu'
- atom_link_header(space, Event.new, :title => "#{ t 'event.other' } - #{ space.name }")

= content_for :sidebar do
  = content_for :sidebar_webconference do
    .content-block-header
      = in_progress_icon if @webconf_room.is_running?
      %h3= t('webconference.one')
      = help_icon t("tooltip.bigbluebutton_space"), :class => 'leftwards'
    .content-block-middle.clearfix
      .description
        - if @webconf_room.is_running?
          %span= t('webconference.currently_running', :count => @webconf_room.participant_count)
        - else
          %span= t('webconference.nobody.one_line')
      .buttons
        - if user_signed_in?
          - webconf_join_link = join_space_room_path(@space, @webconf_room)
        - else
          - webconf_join_link = invite_space_room_path(@space, @webconf_room)
        = link_to t('button.join'), webconf_join_link, :class => 'btn btn-info webconf-start-link'
        - if user_signed_in?
          = webconf_mobile_icon_link(join_mobile_space_room_path(@space, @webconf_room))
        - else
          = webconf_mobile_icon_link(false)
    .content-block-footer
      = link_to t('view_more'), space_webconference_path(@space)

- @files = Dir.entries("app/assets/images/default_event_logos/")
- @files.delete(".")
- @files.delete("..")

.whyte_wrapper
  = render :partial => "edit_new_logo"
  = simple_form_for(:event, :url => space_event_path(@space, @event), :html => {:method => :put, :multiple => "multiple", :autocomplete=>"off" }) do |f|
    = render :partial => "events_form", :locals => { :f => f }
    = f.button :submit, t('button.edit'), :class => 'btn'

    = link_to t('cancel'), space_events_path, :class => "btn", :confirm => t('are_you_sure')