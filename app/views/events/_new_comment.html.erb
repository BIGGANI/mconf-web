<% content_for :javascript do %>
  $(document).ready(function() {
  	$("#new_reply").effect("highlight", {color:"#F5DF51"}, 3000);
  })
<% end %>

<div id="new_reply">
<h3 class="selector_title"><%= t('comment.new') %></h3>
  <div id="post-buttoms" class="actions">
    <ul>
      <li><%= link_to t('comment.one'), space_event_path(@space, @event, :edit_comment => params[:edit_comment]), { :id => 'new_comment_link',:class =>" #{"selected" if (!params[:form] || params[:form]=='')}" } %></li>
      <li><%= link_to t('photos'), space_event_path(@space, @event, :edit_comment => params[:edit_comment], :form => 'photos'),  { :id => 'new_photo_link',:class =>" #{"selected" if params[:form]=='photos'}" } %></li>
      <li><%= link_to t('docs'), space_event_path(@space, @event, :edit_comment => params[:edit_comment], :form => 'docs'), { :id => 'new_doc_link',:class =>" #{"selected" if params[:form]=='docs'}" } %></li>
    </ul>
  </div>

  <% form_for(prepare_for_form(Post.new, :event => @event), :html => { :multipart => true, :id => "reply-form" }) do |f| -%>
  
  <div id="new_photo_form" <%= 'style="display: none;"' if (params[:form] != 'photos' && params[:form] != 'docs') %>>
    <%= render :partial => "posts/form_attachments", :object => f %>
  </div>
  
    <%= f.text_area :text%>
  

  <%= f.hidden_field :event_id %>
  <div class="float">
  <button type="submit" class="basic_button blue_button"><%=t("button.create")%></button>
  </div>
<% end -%>
</div>
