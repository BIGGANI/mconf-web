<% if @event.cm_event?%>
<% content_for :javascript do %>
  $(document).ready(function() {
  	$("#new_reply").effect("highlight", {color:"#F5DF51"}, 3000);
  })
<% end %>

<div id="new_reply">
<h3 class="selector_title"><%= t('event.connection.info') %></h3>
  <ul>
  	<%if @event.web_interface?%>
      <li>
    	<span><%= t('event.connection.web') %>:</span><br/>
	    <strong><span><%= @event.web_url%></span></strong>
	  </li>
	<%end%>
	<%if @event.isabel_interface?%>
		<li>
    	<span><%= t('event.connection.isabel') %>:</span><br/>
	    <strong><span><%=@event.isabel_url%></span></strong>
	  </li>
	<%end%>
	<%if @event.sip_interface?%>
	  <li>
    	<span><%= t('event.connection.sip') %>:</span><br/>
	    <strong><span><%=@event.sip_url%></span></strong>
	  </li>
	<%end%>
  </ul>
</div>
<%else%>
  <%unless @event.vc_mode == Event::VC_MODE.index(:in_person)%>
	   <strong><span><%= t('event.error.cm_connection')%></span></strong>
	<%end%> 
<%end%>