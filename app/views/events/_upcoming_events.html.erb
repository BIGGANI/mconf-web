<div id="events_content">
  <h3>Upcoming Events</h3>
	  <div id="upcoming-links">
	  	<%=link_to "All Upcoming (#{@all_upcoming_events.size})", space_events_path(@space, :show => "upcoming_events"),{:class => "#{!params[:day] ? 'date_link selected' : 'date_link'}"}%> |
	    <%=link_to "Today (#{@today_events.size})" , space_events_path(@space, :show => "upcoming_events", :day => "today"),{:class => "#{params[:day] == 'today' ? 'date_link selected' : 'date_link'}"}%> |
	    <%=link_to "Within 7 days (#{@next_week_events.size})", space_events_path(@space, :show => "upcoming_events", :day => "next_week" ),{:id => 'next_week_link', :class => "#{params[:day] == 'next_week' ? 'date_link selected' : 'date_link'}"}%> |
		<%=link_to "Within a Month (#{@next_month_events.size})", space_events_path(@space, :show => "upcoming_events" , :day =>"next_month"),{:class => "#{params[:day] == 'next_month' ? 'date_link selected' : 'date_link'}"}%> 
		
    </div>
	<div id="upcoming_div">
		<%if params[:day] == 'today'%>
		  <%= render :partial => 'events_group', :locals => {:events_group => @today_paginate_events, :message => "No today events"} %>
		<%elsif params[:day] == 'next_week'%>
		  <%= render :partial => 'events_group', :locals => {:events_group => @next_week_paginate_events, :message => "No next week events"} %>
    <%elsif params[:day] == 'next_month'%>
		  <%= render :partial => 'events_group', :locals => {:events_group => @next_month_paginate_events, :message => "No next month events"} %>
    <%else%>
		  <%= render :partial => 'events_group', :locals => {:events_group => @all_upcoming_paginate_events, :message => "No upcoming events"} %>
		<%end%>
  </div>
</div>