- spaces_menu_at :events
= content_for :menu do
  = render :partial => 'spaces/menu'
- atom_link_header(space, Event.new, :title => "#{ t 'event.other' } - #{ space.name }")

- if @event.is_happening_now?
  .events-hapenning-now.content-block-middle.clearfix
    %p= t('event.note.not_organizer_during').html_safe
- elsif @event.past?
  .content-block-middle.clearfix
    %p= t('event.note.not_organizer_after', :date => @event.start_date.strftime("%d %b %Y")).html_safe
- elsif  @event.start_date
  .content-block-middle.clearfix
    %p= t('event.note.not_organizer_before', :date => @event.start_date.strftime("%d %b %Y")).html_safe
- else
  .content-block-middle.clearfix
    %p= t('event.note.not_organizer_no_date').html_safe

= render :partial => "event_card_show"

= render :partial => "participants"

- if can?(:update, @event)
  = render :partial => "actions"
