  <div class="without_javascript event_info">
    <div class="margin-up">
      <label for="start_time">
        <%= t('event.time.start') %>
      </label>
      <%= f.datetime_select :start_date, {:start_year => Time.zone.now.year, :minute_step => Agenda::SLOT_VALUES[1], :default => Agenda.next_time_slot_for_drop_down} %>
    </div>
    <div class="margin-up">
