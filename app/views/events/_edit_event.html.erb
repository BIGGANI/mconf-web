<h3>Edit Event</h3>

<% form_for([@space,@event], :html => { :multipart => true}) do |f| -%>
  <%= f.error_messages %>				
  <div>
    <label for="Name">Name:</label>
    <%= f.text_field :name, :size =>25  %>
  </div>
  <div>
	<label for="Description">Description:</label>
	<%=f.text_area :description, :class => "span-6"  %>
  </div>  
  <div class="no_javascript">
    Start Date <%=f.datetime_select :start_date, :class => "span-5"  %><br/>
    Start Hour <br/> <%=f.datetime_select :end_date, :class => "span-5"  %><br/>
  </div>
  	<p>
  	<%= f.submit "Update" %>
  	</p>
<% end %>