  <input name="los_indices"  type="hidden" value=1 />
  <TABLE class=Event CELLPADING=5 CELLSPACING=0 BORDER=1 WIDTH=100% >
  <tbody id="event_times">
  <TR class=bold_center><TD>Week NÂº</TD><TD colspan=3>Time</TD></TR>
