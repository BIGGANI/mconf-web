<%div_for(event) do%>
  <div>
  	Updated <%=sanitize(time_ago_in_words(event.updated_at))%> ago
    <%=link_to image_tag("ui/icons/date-edit.png", :alt => "edit") , space_events_path(@space,:edit => event), :title => "edit" if event.authorizes?(:update, :to => current_user) %> 
	  <%=link_to image_tag("ui/icons/cross.png", :alt => "delete") , space_event_path(@space, event),{:method => :delete, :title => "destroy"} if event.authorizes?(:delete, :to => current_user) %><br/>
  </div>
  <h6><%=sanitize(event.title)%></h6> created by  <%=sanitize(event.author.name)%><br/>
	From <%=sanitize(event.start_date.to_formatted_s(:short))%> To <%=sanitize(event.end_date.to_formatted_s(:short))%>   <br/>
  <%=sanitize(event.description)%> 
  <br/>
  <%end%>