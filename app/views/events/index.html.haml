- spaces_menu_at :events
= content_for :menu do
  = render :partial => 'spaces/menu'
- atom_link_header(space, Event.new, :title => "#{ t 'event.other' } - #{ space.name }")

= content_for :sidebar do
  = content_for :sidebar_webconference do
    .content-block-header
      = in_progress_icon if @webconf_room.is_running?
      %h3= t('webconference.one')
      = help_icon t("tooltip.bigbluebutton_space"), :class => 'leftwards'
    .content-block-middle.clearfix
      .description
        - if @webconf_room.is_running?
          %span= t('webconference.currently_running', :count => @webconf_room.participant_count)
        - else
          %span= t('webconference.nobody.one_line')
      .buttons
        - if user_signed_in?
          - webconf_join_link = join_space_room_path(@space, @webconf_room)
        - else
          - webconf_join_link = invite_space_room_path(@space, @webconf_room)
        = link_to t('button.join'), webconf_join_link, :class => 'btn btn-info webconf-start-link'
        - if user_signed_in?
          = webconf_mobile_icon_link(join_mobile_space_room_path(@space, @webconf_room))
        - else
          = webconf_mobile_icon_link(false)
    .content-block-footer
      = link_to t('view_more'), space_webconference_path(@space)

  - if can?(:create_event, @space)
    #new_event
      = link_to t('event.create.title'), new_space_event_path, :class => "btn btn-block btn-large"

#events_wrapper
  #events_content
    - if !@current_events.empty?
      #current_events
        %h3
          = t('now_exclamation')
        - for event in @current_events
          = render :partial => event

    #events_links.group_links
      = link_to t('all'), space_events_path(@space, :show => "all"), :id => 'all_link', :class => "btn #{'active' if params[:show] == 'all' or !params[:show]}"
      = link_to t('upcoming'), space_events_path(@space, :show => "upcoming_events"), :class => "btn #{'active' if params[:show] == 'upcoming_events'}"
      = link_to t('past'), space_events_path(@space, :show => "past_events"), :class => "btn #{'active' if params[:show] == 'past_events'}"

    - if params[:show] == 'past_events'
      = render :partial => 'past_events'
    - elsif params[:show] == 'upcoming_events'
      = render :partial => 'upcoming_events'
    - else
      = render :partial => 'all_events'