<% metaTitle = @room.metadata.all.select{ |m| m.name == configatron.metadata.title }.first %>
<% metaDesc = @room.metadata.all.select{ |m| m.name == configatron.metadata.description }.first %>

<%= content_for :javascript do  %>

  var lastRecordingTitle = "<%= metaTitle ? metaTitle.content : "" %>";
  var lastRecordingDesc = "<%= metaDesc ? metaDesc.content : "" %>";

  $("a#mobile_join").fancybox({
    'hideOnContentClick' : false,
    'frameWidth' : 250,
    'frameHeight' : 500
  });

  $("a#invite_bbb_link").fancybox({
    'hideOnContentClick' : false,
    'frameWidth' : 450,
    'frameHeight' : 430
  });

  $("a#edit_bbb_room").fancybox({
    'hideOnContentClick' : false,
    'frameWidth' : 450,
    'frameHeight' : 430
  });

  $("#edit-bbb-room #private").livequery('click', function(event) {
    $('#edit-bbb-room .passwords').toggle(0);
    if ($("#private").is(':checked')) {
      $('#moderatorPW').removeAttr('disabled');
      $('#attendeePW').removeAttr('disabled');
    }
    else{
      $('#moderatorPW').attr('disabled', true);
      $('#attendeePW').attr('disabled', true);
    }
  });

  $("#webconference-rooms .invite_url_button").livequery('click', function(event) {
    $("#invite_url").toggle('fast');
  });

  $("#new-webconf-room #private").livequery('click', function(event) {
    $('#new_room_private_area').toggle(0);
    if ($(this).is(':checked')) {
      $('#moderatorPW').removeAttr('disabled');
      $('#attendeePW').removeAttr('disabled');
    }
    else {
      $('#moderatorPW').attr('disabled', true);
      $('#attendeePW').attr('disabled', true);
    }
  });

  blockStartWebconf = function() {
    $("#start-webconf").addClass("disabled");
  }

  unblockStartWebconf = function() {
    $("#start-webconf").removeClass("disabled");
  }

  blockRecordingOptions = function() {
    $("#recording-options").find("input,textarea").attr("disabled", "disabled");
  }

  unblockRecordingOptions = function() {
    $("#recording-options").find("input,textarea").attr("disabled", null);

    // Sometimes the input is focused but the cursor is not being shown
    if ($("#recording-description").is(":focus")) {
      var input = $("#recording-description");
      var v = input.val();
      input.blur();
      input.focus().val("").val(v);
    }
    if ($("#recording-title").is(":focus")) {
      var input = $("#recording-title");
      input.focus().val(input.val());
    }
  }

  showHideRecordingOptions = function() {
    if ($("#record-checkbox").is(":checked")) {
      $("#recording-options").show();
    } else {
      $("#recording-options").hide();
    }
  }

  $("#record-checkbox").click(function () {
    var check = $(this);
    blockStartWebconf();
    blockRecordingOptions();
    $.post("<%= user_path(current_user, :format => 'json') %>", {
      _method: "put",
      authenticity_token: "<%= form_authenticity_token() %>",
      "bbb_room": 1,
      "bigbluebutton_room[record]": $(this).is(":checked")
    }).fail(function() {
      check.attr("checked", !check.attr("checked"));
      unblockRecordingOptions();
      showHideRecordingOptions();
    }).success(function() {
      unblockRecordingOptions();
      unblockStartWebconf();
      showHideRecordingOptions();
    });
  });

  $("#recording-title").editable("<%= user_path(current_user, :format => 'json') %>", {
    indicator: "<%= t('button.saving_dots') %>",
    tooltip: "<%= t('button.click_to_edit') %>",
    name: "bigbluebutton_room[metadata_attributes][<%= @room.metadata.index(metaTitle) %>][content]",
    type: "textarea",
    method: "PUT",
    submit: "OK",
    submitdata: {
      "bbb_room": 1,
      "bigbluebutton_room[metadata_attributes][<%= @room.metadata.index(metaTitle) %>][id]": <%= metaTitle ? metaTitle.id : "null" %>
    },
    ajaxoptions: {
      dataType: 'json',
      success: function(result, status) {
        $("#recording-title")[0].reset();
        var idx = <%= @room.metadata.index(metaTitle) || 0 %>;
        $("#recording-title").text(result["metadata"][idx]["content"]);
      }
    }
  });

  $("#recording-description").editable("<%= user_path(current_user, :format => 'json') %>", {
    indicator: "<%= t('button.saving_dots') %>",
    tooltip: "<%= t('button.click_to_edit') %>",
    name: "bigbluebutton_room[metadata_attributes][<%= @room.metadata.index(metaDesc) %>][content]",
    type: "textarea",
    method: "PUT",
    submit: "OK",
    submitdata: {
      "bbb_room": 1,
      "bigbluebutton_room[metadata_attributes][<%= @room.metadata.index(metaDesc) %>][id]": <%= metaDesc ? metaDesc.id : "null" %>
    },
    ajaxoptions: {
      dataType: 'json',
      success: function(result, status) {
        $("#recording-description")[0].reset();
        var idx = <%= @room.metadata.index(metaDesc) || 0 %>;
        $("#recording-description").text(result["metadata"][idx]["content"]);
      }
    }
  });

  <!-- $("#recording-duration").keyup(function () { -->
  <!--   this.value = this.value.replace(/[^0-9\.]/g,''); -->
  <!-- }); -->

<% end %>

<div id="webconference-rooms">
  <div class="my-webconference-rooms">
    <h3>
      <%= t('webconference.my_webconference') %>
      <span class="updated">
        <% if @room.is_running? %>
          <% if @room.participant_count == 0 %>
            <% text = t('home.running_with.no_participants') %>
          <% else %>
            <% text = t('home.running_with.participants', :count => @room.participant_count) %>
          <% end %>
        <% else %>
          <% text = t('home.not_running') %>
        <% end %>
        <% text = "(" + text + ")" %>
        <%= text %>
      </span>
    </h3>
    <div class="room_list">
      <% if @room.nil? %>
        <span class="updated"><%= t('home.no_rooms') %></span>
      <% else %>
        <div>
          <div class="invite_url url_share" id="invite_url">
            <span class="only_url"><%= t('home.invite_url') + ":" %> </span>
            <input id="invite_url_text" type="text" value="<%= join_webconf_url(@room) %>" disabled="disabled" />
            <!-- <div class="clippy"> -->
            <!--   <%= clippy(:id => "invite_url_text", :bg_color => "#FFFFFF").html_safe %> -->
            <!-- </div> -->
          </div>
          <span class="float_right">
            <%= link_to t('home.webconf.configure'), edit_bbb_room_user_path(current_user, :room => @room.to_param), :id => "edit_bbb_room", :class => 'basic_button small_button pale_button' %>
            <%= link_to "#", :class => 'basic_button small_button orange_pale_button join_button', :"data-dropdown" => "#dropdown-join-webconf" do %>
              <%= t('button.join') %>
              <span class="caret"></span>
            <% end %>
          </span>
          <div class="clearer"></div>

        </div>

        <% if @recordings.count > 0 %>
          <h4>
            <%= t('home.recordings.latest_recordings', :count => @recordings.count) %>
            <a class="recordings-view-all" href="<%= recordings_home_path %>"><%= t('home.recordings.view_all') %></a>
          </h4>
          <%= render :partial => 'recordings/recording_list', :locals => {:recordings => @recordings} %>
          <div class="clearer"></div>
        <% end %>

      <% end %>
    </div>
  </div>
</div>

<div id="success" class="hide">
</div>

<%= content_for :bottom do %>
  </br>
  <div id="dropdown-join-webconf" class="dropdown dropdown-tip dropdown-anchor-right">
    <ul class="dropdown-menu">
      <li><label>
        <%= check_box_tag 'bigbluebutton_room[record]', t('home.webconf.record'), @room.record, :id => 'record-checkbox' %>
        <span><%= t('home.webconf.record') %></span>
      </label></li>
      <li>
        <div id="recording-options" class="<%= 'offscreen' unless @room.record %>">
          <!-- <div class="field"> -->
          <!--   <span class="inline"><%= t('home.webconf.recording_duration') %></span> -->
          <!--   <%= text_field_tag 'bigbluebutton_room[duration]', @room.duration, :id => 'recording-duration' %> -->
          <!--   <%= t('home.webconf.recording_duration_units') %> -->
          <!-- </field> -->
          <div class="field">
            <span><%= t('home.webconf.recording_title') %></span>
            <div id="recording-title" class="editable"><%= metaTitle.nil? ? "" : metaTitle.content %></div>
          </field>
          <div class="field">
            <span><%= t('home.webconf.recording_description') %></span>
            <div id="recording-description" class="editable"><%= metaDesc.nil? ? "" : metaDesc.content %></div>
          </field>
        </div>
      </li>
      <li class="dropdown-divider"></li>
        <li><%= link_to t('home.webconf.invite_people'), inviteroom_invite_path(:type => "webconference", :room => @room.to_param), :id => 'invite_bbb_link' %></li>
        <li>
          <%= mobile_icon_link(join_mobile_bigbluebutton_room_path(@room), t('home.webconf.join_from_mobile')) %>
        </li>
      <li class="dropdown-divider"></li>
      <li>
        <%= link_to t('home.webconf.start'), join_bigbluebutton_room_path(@room), :class => "clean_popup", :id => "start-webconf" %>
      </li>
    </ul>
  </div>
<% end %>
