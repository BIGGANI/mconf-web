<%= content_for :javascript do  %>

  $("a#newroom_bbb_link").fancybox({
    'hideOnContentClick' : false,
    'frameWidth' : 450,
    'frameHeight' : 430
  });

  $("a#invite_bbb_link").fancybox({
    'hideOnContentClick' : false,
    'frameWidth' : 450,
    'frameHeight' : 430
  });

<% end %>

<div id="webconference-rooms">
  <div class="my-webconference-rooms">
    <h3>
      <%= t('webconference.my_webconference') %> 
      <span class="fr">
        <%= link_to t('button.new_room'), newroom_home_path, :id => 'newroom_bbb_link', :class => 'small_button orange_button bigbluebutton_button rounded_button'%>
      </span>
    </h3>
    <span class="text">
      <% if @roomOpen %>
        <% @bbb_rooms.each do |rooms| %>
          <ul>
            <li>
              <span class="red_c"> <%= rooms[:meetingID] %> </span>
              <span class="fr"> <%= link_to image_tag("icons/cancel.png"), endroom_home_path(:id => rooms[:meetingID], :pw => rooms[:moderatorPW])  %> </span>
              <span class="fr"> <%= link_to t('home.rem_room'), endroom_home_path(:id => rooms[:meetingID], :pw => rooms[:moderatorPW]) %> </span>
              <div class="clearer"></div>
              <div class="webconference-url-home"> <!-- arrumar endereÃ§o das salas. --> <%= joinroom_home_url %> </div>
              <div class="clearer"></div>
              <br>
              <%= link_to t('button.join'), joinroom_home_path(:id => rooms[:meetingID], :pw => rooms[:moderatorPW]), :id => 'join_bbb_link', :class => 'small_button orange_button bigbluebutton_button rounded_button border_button'%>
              <%= link_to t('button.invite_bbb'), inviteroom_home_path(:room => rooms), :id => 'invite_bbb_link', :class => 'small_button pale_button bigbluebutton_button rounded_button border_button'%>
            </li>
          </ul>
        <% end %>
      <% else %>
        <%= t('home.no_rooms') %>
      <% end %>
    </span>
  </div>
</div>

