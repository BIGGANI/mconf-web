- active_cls = @room.is_running? ? "active" : ""
#webconference-room{ :class => active_cls }

  %h3
    - if @room.is_running?
      = image_tag('icons/in_progress-16x16.gif', :class => 'in-progress-icon')
      - if @room.participant_count == 0
        - status = t('home.webconference.running_with.no_participants')
      - else
        - status = t('home.webconference.running_with.participants', :count => @room.participant_count)
    - else
      - status = t('home.webconference.not_running')
    = status.capitalize
    - t('webconference.my_webconference')

  .right-column
    .main-action-buttons
      - join_text = @room.is_running? ? t('webconference.join') : t('webconference.start_now')
      = link_to join_text, join_bigbluebutton_room_path(@room), :class => 'btn btn-info btn-small webconf-start-link'
      = webconf_mobile_icon_link(join_mobile_bigbluebutton_room_path(@room))

  .left-column
    .invite-url
      -#.clippy
      -#  = clippy(:id => "invite-url-text", :bg_color => "#FFFFFF").html_safe
      = label_tag 'invite-url-text', t('home.webconference.your_url')
      = text_field_tag 'invite-url-text', join_webconf_url(@room), :readonly => true
    %ul.action-buttons
      - if @room.is_running?
        %li= link_to t('home.webconference.end'), end_bigbluebutton_room_path(current_user.bigbluebutton_room, :redir_url => home_path), :title => t('home.webconference.end_tooltip'), :confirm => t('are_you_sure'), :class => 'danger-text tooltipped upwards'
      %li= link_to t('configurations'), edit_bbb_room_user_path(current_user), :title => t('home.webconference.config_tooltip'), :class => 'open-modal tooltipped upwards'
      %li= link_to t('home.webconference.invite'), inviteroom_invite_path(:type => "webconference", :room => @room.to_param), :title => t('home.webconference.invite_tooltip'), :class => 'open-modal tooltipped upwards'
