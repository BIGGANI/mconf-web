= content_for :page_header_subtitle do
  = t(".notice")
= render_page_title t(".title", :room => @room.name).html_safe

.download-block
  .download-text= t(".not_launched")
  .download-image
    = link_to mobile_google_play_link do
      = image_tag mobile_google_play_image, :alt => t('.click_to_download'), :title => t('.click_to_download')

.additional-option
  = link_to t(".try_again"), @join_url
.additional-option
  = link_to t(".use_default_client"), join_bigbluebutton_room_path(@room, :force_desktop => "1")
