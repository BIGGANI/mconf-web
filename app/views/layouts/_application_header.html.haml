- if content_for? :"page-header"
  #page-header
    = yield :"page-header"
- else
  - if space && space.id != nil
    #page-header
      .current-page-logo
        = logo(space, :size => "h64", :title => space.name).html_safe
      .current-page-title
        - if space.name.size > 30
          .small-title
            = sanitize(first_words(space.name, 30))
        - else
          = sanitize(space.name)

