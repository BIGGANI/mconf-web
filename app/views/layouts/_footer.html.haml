#footer

  #footer-content
    .link-group
      #footer-logo.link-group
        %a.title{:href => "/"}= t('mconf')
        %span= t('footer.copyright')
      #footer-version
        = t('footer.current_version') + ": "
        %a{:href => github_link_to_revision(application_revision)}
          = application_version + "/" + application_branch + "/" + application_revision
    .link-group
      %h3= t('footer.links.title')
      %ul
        %li= link_to(t('footer.links.help'), help_path)
        %li= link_to(t('footer.links.feedback'), new_feedback_path(), :id => "feedback_link" )
        %li= link_to(t('footer.links.statistics'), "/stats.html" )
    .link-group
      %h3= t('footer.find_us')
      %ul
        %li
          %a{:href => "http://www.inf.ufrgs.br/prav/gtmconf"}= t('footer.website')
        %li
          %a{:href => "http://code.google.com/p/mconf"}= t('footer.gcode')
        %li
          %a{:href => "https://github.com/mconf"}= t('footer.github')
    .link-group.languages
      %h3= t('translate.change')
      %ul
        - for locale in (I18n.available_locales)
          %li
            - flag = image_tag("flags/" + locale.to_s + ".png", :title => locale.to_s)
            - text = t('locales.' + locale.to_s)
            - link = link_to(text, session_locale_path(:new_locale => locale.to_s), :method => :post)
            = (flag + " " + link).html_safe
    .link-group2.footer-sponsors
      %h3= t('footer.sponsors.title')
      %ul
        %li
          = image_tag("logos/prav_small.png")
          %a{:href => "http://www.inf.ufrgs.br/prav"}= t('footer.sponsors.prav').html_safe
        %li
          = image_tag("logos/rnp_small.jpg")
          %a{:href => "http://www.rnp.br"}= t('footer.sponsors.rnp').html_safe
    .link-group2.version-info
      = t('footer.built_on_top_of').html_safe
    = render_clearer
