
<%if space %>
<div id="space_logo" class="span-24 last">
  <%= link_logo(space, :size => 96) %>
</div>
<%end%>

<div id="spaces_select" class="span-6">
	<form action="/change_space" method="get">
  	<select id="space_select" name="space">
  		<%if !@space%>
				<option value="#" selected="selected" >Select a Space...</option>
			<%end%>  	
    	<% Space.all.select{|s| s.authorizes?([:read, :content], :to => current_user)}.each do |space| %>
     		<%if @space and @space.name == space.name%>
       		<option value="<%= space_path(space) %>" selected="selected"><%= space.name %></option>
				<%else%>
		  		<option value="<%= space_path(space) %>" ><%= space.name %></option>
				<%end%>	
   		<%end %>
  	</select>
		<input id="go_button"type="submit" value="Go!">	
	</form>	
</div>

<%if space %>
<div id="nav_bar" class="span-12">
  <ul>
	  <li><%=link_to "Home", space_path(space)%></li>
	  <li><%=link_to "Posts", space_posts_path(space)%></li>
	  <li><%=link_to "Events", space_events_path(space)%></li>
	  <li><%=link_to "People", space_users_path(space)if space.authorizes?([:read, :performance], :to => current_user)%></li>
 
<!--La tab de Admin sÃ³lo se muestra a los admin  -->
  
    <li><%=link_to "Admin", edit_space_path(space) if space.role_for?(current_user, :name => 'Admin') || current_user.superuser? %></li>
  </ul>
</div>



  <div id="search">
    <%= yield :search %>
  </div>
<%end%>
