<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN"
  "http://www.w3.org/TR/html4/strict.dtd">

<html lang="en">
  <head>
    <meta http-equiv="Content-type" content="text/html; charset=utf-8">
    <title><%= content_for?(:title) ? yield(:title) : current_site.name %></title>
    <link href="/favicon.ico" rel="shortcut icon" />

    <%= stylesheet_link_tag "application_print", :media => "print" %>
    <%= stylesheet_link_tag "application", :media => "screen, projection" %>
    <%= stylesheet_link_tag "application/old/screen", :media => "screen, projection" %>
    <%= stylesheet_link_tag "homes_temp", :media => "screen, projection" %>
    <% unless Rails.env == "production" %>
      <style type="text/css">
        .translation_missing {
          color: purple;
          background-color: red;
        }
      </style>
    <% end %>

    <!--[if IE]>
    <%= stylesheet_link_tag "ie", :media => "screen, projection" %>
    <![endif]-->
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tag %>
    <%= yield :headers %>

    <script type="text/javascript" charset="utf-8">
      $(document).ready(function() {
      <%= yield :javascript %>
      })
    </script>

  </head>

  <body>
    <div id="site">
      <%= render :partial => "layouts/application_global_header" %>

      <div id="space">

        <div id="header">
          <%= render :partial => "layouts/home_header" %>
        </div>

        <div id="content">
          <div id="main">

            <% flash.each do |name, msg| %>
            <div class="<%= name %>"><%= msg.html_safe %></div>
            <% end %>

            <%= yield :menu %>
            <div class="whyte_wrapper <%= "hide" unless @update_act %>">
              <%= yield %>
            </div>
          </div>
          <div id="sidebar">
            <%= yield :sidebar %>
          </div>
        </div>
      </div>
      <%= render :partial => "layouts/footer" %>
    </div>

    <%= render :partial => "layouts/analytics" %>
  </body>
</html>
