<html>
	
<head>
  <!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
  <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1">
  <%=yield(:head)%>
  <%= javascript_include_tag("prototype", "effects") %>
  <%= javascript_include_tag("sir") %>
  <%= javascript_include_tag :defaults %>
    <%= javascript_include_tag :fckeditor %>
  <title><%= 'Isabel Server'.t %></title>
  <%= stylesheet_link_tag 'estilosir2' %>
  <%= stylesheet_link_tag 'estilosir3' %>
  <%= stylesheet_link_tag 'grids' %>
  <%= stylesheet_link_tag 'reset-fonts-grids' %>
  
  <META HTTP-EQUIV="Pragma" CONTENT="no-cache">
  <META HTTP-EQUIV="Expires" CONTENT="-1">
  
  
  
</head>

<body >
	<div id="doc2" class="yui-t3">
		<div id="hd">		
			<div id="logo">
				 <!--<%= @page_title || "Isabel Server" %>-->
			</div>
			<div id="menu_tabs">
				<%= render :partial => 'home/buttons', :layout => false%>				
			</div>
			<%= render :partial => 'home/secondary_buttons', :layout => false%>
			<div id="login2">
			 	<%= render :partial => 'home/login', :layout => false%>
			</div>
  		</div>
  
   		<div id="bd">
	         <% if flash[:notice] -%>
	        	<br><div id="notice" style="color: green"><%= flash[:notice] %></div>
	        	<% end -%>
				<% if flash[:error] -%>
	        	<br><div id="notice" style="color: green"><%= flash[:error] %></div>
	        	<% end -%>
				<% if flash[:warning] -%>
	         	<br><div id="notice" style="color: red"><%= flash[:warning] %></div>
	        	<% end -%>
	        	<%= @content_for_layout %>   
   		</div>
	    
   		<div id="ft">
			<a href="/">Home</a> |<a href="/">Site map</a> | <a href="/">Faq</a> | <a href="/">About</a>
   		</div>  

 
  </div>
</body>




</html>
