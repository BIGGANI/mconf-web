- transparent ||= nil
- logo ||= nil

= content_for :"page-header" do
  - unless logo.nil?
    .current-page-logo{ :class => transparent ? 'clean' : '' }
      = image_tag(logo, :title => page_title)
    .current-page-title
      = page_title
    .current-page-extra
      - if content_for?(:"page-header-extra")
        = yield :"page-header-extra"
  - else
    .current-page-extra
      - if content_for?(:"page-header-extra")
        = yield :"page-header-extra"
    %h1= page_title
