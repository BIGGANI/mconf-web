 <div id="logo">
	<% if space %>
	    <%= image_tag "logos/sxsw.png" %> 
	    <!--<%= link_logo(space, :size => 96) %>-->
	<%else%>
		<%= image_tag "logos/sxsw.png" %>
	<% end %>
</div>

<div id="search">
  <%= yield :search %>
</div>

<div id="prefs">
	<ul>
    <% if logged_in? %>
	    <li><%= link_to "Inbox (#{PrivateMessage.find_all_by_receiver_id(current_user).select{|msg| !msg.checked}.size})", user_messages_path(current_user), :id => "user_inbox_link"%></li>
	  	<li><%= link_to "Profile", user_profile_path(current_user)%></li>
	  	<li>Preferences</li>
	  	<li><%= link_to "Logout (#{current_user.name})", logout_path %></li>	
	  <% else %>
	  	<li><%= link_to 'Log in', login_path %></li>
	  <% end %>
	</ul>
</div>