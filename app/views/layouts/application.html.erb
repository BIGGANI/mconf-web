<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN"
  "http://www.w3.org/TR/html4/strict.dtd">

<html>
  <head>
    <meta http-equiv="Content-type" content="text/html; charset=utf-8">
    <title><%= content_for?(:title) ? yield(:title) : current_site.name %></title>
    <link rel="shortcut icon" type="image/x-icon" href="/favicon.ico" />

    <%= stylesheet_link_tag "common", :media => "screen, projection" %>
    <%= stylesheet_link_tag "new_style_compat", :media => "screen, projection" %>
    <%= stylesheet_link_tag "screen", :media => "screen, projection" %>
    <%= stylesheet_link_tag "lightbox", :media => "screen, projection" %>
    <%= stylesheet_link_tag "calendar", :media => "screen, projection" %>
    <%= stylesheet_link_tag "jquery/jquery.fancybox.css", :media => "screen, projection" %>
    <%= stylesheet_link_tag "jquery/jquery.jcrop.css", :media => "screen, projection" %>
    <%= stylesheet_link_tag "jquery/jquery.qtip.2.0.0pre.css", :media => "screen, projection" %>
    <%= stylesheet_link_tag "timeentry", :media => "screen, projection" %>
    <%= stylesheet_link_tag "print", :media => "print" %>
    <%= stylesheet_link_tag "token-input-facebook", :media => "screen, projection" %>
    <%= stylesheet_link_tag "bigbluebutton_rails", :media => "screen, projection" %>

    <!--[if IE]>
    <%= stylesheet_link_tag "ie", :media => "screen, projection" %>
    <![endif]-->
    <script type="text/javascript">
      if (navigator.userAgent.indexOf('Mac') != -1) {
      document.write("<link href='/stylesheets/mac.css' media='screen, projection' rel='stylesheet' type='text/css' />");
      }
    </script>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tag %>
    <%= yield :headers %>

    <script type="text/javascript" charset="utf-8">
      $(document).ready(function() {
        <%= yield :javascript %>
      })
    </script>

  </head>

  <body>
    <div id="site">
      <%= render :partial => "layouts/global" %>

      <div id="space">

        <div id="header">
          <%= render :partial => "layouts/header" %>
        </div>

        <div id="content">
          <div id="main">

            <div id="flash_div" class="success" style="display:none"></div>
            <% flash.each do |name, msg| %>
            <div class="<%= name %>"><%= msg.html_safe %></div>
            <% end %>


            <%= render :partial => "layouts/menu" %>

            <div id="wrapper">
              <%= yield %>
            </div>
          </div>

          <div id="sidebar">
            <%= yield :sidebar %>
          </div>
        </div>
      </div>

      <%= render :partial => "layouts/footer" %>
    </div>

    <%= render :partial => "layouts/analytics" %>
  </body>
</html>
