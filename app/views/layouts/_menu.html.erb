<%space = @space%>
<% if space %>
<div id="menu">
  <ul>
    <li><%= link_to t('home.up'), space_path(space), menu_options(:home) %></li>
    <li><%= link_to t('post.up.other'), space_posts_path(space), menu_options(:posts) %></li>
    <li><%= link_to t('event.up.other'), space_events_path(space), menu_options(:events) %></li>
    <li><%= link_to(t('people.up'), space_users_path(space), menu_options(:people)) if space.authorize?([:read, :performance], :to => current_user) %></li>
	<li><%= link_to(t('repository.up'), space_attachments_path(space), menu_options(:repository)) if space.repository?%></li>
    <li><%= link_to(t('admin.up'), edit_space_path(space), menu_options(:admin, :class => "admin")) if space.role_for?(current_user, :name => 'Admin') || current_user.superuser? %></li>
  </ul>
</div>
<% end %>
