<% @page_title = "My Hcard" -%>




<%= error_messages_for :profile %>

 <h4 class="title">My Hcard</h4>
 
 <div class="vcard" id="card">
 	
	
    <div id="image_profile">
    	<%=image_tag(user_profile_logotype_path(@user, :thumbnail => @thumbnail)) if @thumbnail%>
    </div>
	
 	<div class="adr">
 		<p class="fn"><%= @profile.name%> <%= @profile.lastname%></p>
 		<!--<div class="type">
 			<abbr class="geo" title="40.546157;-3.636475">Work</abbr>
		 	</div>
		-->
		 <p class="street-address"> <%= @profile.address%> </p>
		 <p class="locality"> 
		 	<%= @profile.city%><span class="region" title="<%= @profile.province%>"><%= @profile.province%></span>
			<span class="postal-code"> <%= @profile.zipcode%></span>
		 </p>
		 <p class="country-name"><%= @profile.country%></p>
 
 	</div>
  	<!--<div class="type">
 			<abbr class="geo" title="40.546157;-3.636475">Work</abbr>
		 	</div>
		-->
	<div class="telecommunications">
		 <p class="tel">Phone/Fax: <span class="tel"><!--<span class="type">Work</span>: --><span class="value"><%= @profile.phone%><%= @profile.fax%></span>
		 <span class="type">Mobile</span>: <span class="value"><%= @profile.mobile%></span></p>
		 <p class= "org">Organization: <%= @profile.organization%></p>
		 <p class="email">Email: <a class="value" href="mailto:<%= @user.email %>"><%= @user.email %></a></p>
	 </div>

</div>

<br/>

<%= link_to 'Edit', edit_user_profile_path(@user)%>  

