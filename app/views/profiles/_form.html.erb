<%content_for :javascript do %>
 $("#profile_prefix_key").change(function(){
  if ($("#profile_prefix_key option:selected").attr("value")== "other"){
	 $(this).replaceWith("<%=escape_javascript(text_field_tag('profile[prefix_key]'))%>"); 
	}
 });
<%end%>

<div class="title">
	<h3>
		<div id="help" title="<%= h(t('profile.public_description')) %>"></div>
		<%= t('profile.public') %>
	</h3>
</div>

<div class="profile_content_item">
	<h4><%= t('personal_information') %></h4>
	<div class="margin-up">
		<label for="prefix"><%= t('name.prefix') %></label>
		<%if @profile.prefix_key.include?("title_formal.") %>
		  <%= f.select :prefix_key, [[t('title_formal.mr'), 'title_formal.mr'], [t('title_formal.mrs'), 'title_formal.mrs'], [t('title_formal.ms'), 'title_formal.ms'], [t("other"), "other"]] %>
		<%else%>
		  <%=f.text_field :prefix_key %>
		<%end%>
	</div>
	<div class="margin-up">
		<label for="full_name"><%= t('name.full') %></label>
		<%= f.text_field :full_name %>
	</div>
	
	<div class="margin-up"><label for="organization"><%= t('organization') %></label><br/>
	<%= f.text_field :organization %></div>
	
	<div class="margin-up"><label for="city"><%= t('city') %></label><br/>
	<%= f.text_field :city %></div>
	
	<div class="margin-up"><label for="province"><%= t('province') %></label><br/>
	<%= f.text_field :province %></div>
	
	<div class="margin-up"><label for="country"><%= t('country') %></label><br/>
	<%= f.text_field :country %></div>
	
	<h4><%= t('description') %></h4>
	<div class="margin-up" id="profile_description"><label for="description"><%= t('description') %></label><br/>
	<%= f.text_area :description, :size => "34x7" %></div>
	
	<h4><%= t('url') %></h4>
	<div class="margin-up"><label for="url"><%= t('url') %></label><br/>
	<%= f.text_field :url%></div>
</div>

<div class="blue_title">
	<div id="help" title="<%= h(t('profile.private_description')) %>"></div>
	<h3><%= t('profile.private') %></h3>
</div>

<%= t('profile.visibility') %>
<div class="profile_visibility_gradient"><%= image_tag "gradient.png" %></div>
<% for vis_symbol in Profile::VISIBILITY do %>
  <div class="margin-up"><%= f.radio_button :visibility, Profile::VISIBILITY.index(vis_symbol)%>
  <label for=<<%=('visibility_' + vis_symbol.to_s)%>><%= t( 'profile.visibility_' + vis_symbol.to_s ) %></label><br/></div>
<% end%>

<% f.fields_for :user do |user_form| %>
	<div class="margin-up">
		<%= user_form.label :email, t('e-mail.one') %><br/>
		<%= user_form.text_field :email %>
	</div>
<% end %>

<div class="margin-up"><label for="skype"><%= t('skype') %></label><br/>
<%= f.text_field :skype %></div>

<div class="margin-up"><label for="im"><%= t('im') %></label><br/>
<%= f.text_field :im %></div>

<div class="margin-up"><label for="phone"><%= t('phone.landline') %></label><br/>
<%= f.text_field :phone %></div>
	
<div class="margin-up"><label for="mobile"><%= t('phone.mobile') %></label><br/>
<%= f.text_field :mobile %></div>
	
<div class="margin-up"><label for="fax"><%= t('fax') %></label><br/>
<%= f.text_field :fax%></div>
	
<div class="margin-up"><label for="address"><%= t('address') %></label><br/>
<%= f.text_field :address %></div>
	
<div class="margin-up"><label for="zipcode"><%= t('zipcode') %></label><br/>
<%= f.text_field :zipcode%></div>


