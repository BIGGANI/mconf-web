<div class="blue_title"><h3><%= t('profile.public') %></h3></div>

<div class="margin-up"><label for="prefix"><%= t('name.prefix') %></label><br/>
<%= f.text_field :prefix %></div>

<% f.fields_for :user do |user_form| %>
	<div>
		<%= user_form.label :login, t('name.full') %><br/>
		<%= user_form.text_field :login %>
	</div>

	<div class="margin-up">
		<%= user_form.label :email, t('e-mail.one') %><br/>
		<%= user_form.text_field :email %>
	</div>

<% end %>

<div class="margin-up"><label for="organization"><%= t('organization') %></label><br/>
<%= f.text_field :organization %></div>

<div class="margin-up"><label for="city"><%= t('city') %></label><br/>
<%= f.text_field :city %></div>

<div class="margin-up"><label for="province"><%= t('province') %></label><br/>
<%= f.text_field :province %></div>

<div class="margin-up"><label for="country"><%= t('country') %></label><br/>
<%= f.text_field :country %></div>

<div class="margin-up"><label for="description"><%= t('description') %></label><br/>
<%= f.text_area :description, :size => "34x7" %></div>

<div class="margin-up"><label for="url"><%= t('url') %></label><br/>
<%= f.text_field :url%></div>


<div class="blue_title"><h3><%= t('profile.private') %></h3></div>

<%= t('profile.visibility') %>
<div class="profile_visibility_gradient"><%= image_tag "gradient.jpg" %></div>
<% for vis_symbol in Profile::VISIBILITY do %>
  <div class="margin-up"><%= f.radio_button :visibility, Profile::VISIBILITY.index(vis_symbol)%>
  <label for=<<%=('visibility_' + vis_symbol.to_s)%>><%= t( 'profile.visibility_' + vis_symbol.to_s ) %></label><br/></div>
<% end%>

<% f.fields_for :user do |user_form| %>
	<div class="margin-up">
		<%= user_form.label :email, t('e-mail.one') %><br/>
		<%= user_form.text_field :email %>
	</div>
<% end %>

<div class="margin-up"><label for="skype"><%= t('skype') %></label><br/>
<%= f.text_field :skype %></div>

<div class="margin-up"><label for="im"><%= t('im') %></label><br/>
<%= f.text_field :im %></div>

<div class="margin-up"><label for="phone"><%= t('phone') %></label><br/>
<%= f.text_field :phone %></div>
	
