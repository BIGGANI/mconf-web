<%= error_messages_for :profile %>

 <div class="vcard">
 <p class="fn"><%= @profile.name%> <%= @profile.lastname%>
 <img src="/images/hcard.png" alt="download vcard icon"></a>
 </p>
  
 <div class="adr">
 <p class="street-address"> <%= @profile.address%> </p>
 <p><span class="locality"> <%= @profile.city%> </span> <abbr class="region" title="<%= @profile.province%>"><%= @profile.province%></abbr> <span class="postal-code"> <%= @profile.zipcode%> </span></p>
 <p class="country-name"><%= @profile.country%></p>
 </div>
  
 <div class="telecommunications">
 <p class="tel">Phone/Fax: <span class="tel"><span class="type">Work</span>: <span class="value"><%= @profile.phone%></span>
 <span class="type">Mobile</span>: <span class="value"><%= @profile.mobile%></span></p>
 <p class="email">Email: <a class="value" href="mailto:<%= @user.email %>"><%= @user.email %></a></p>
 </div>
 </div>
 <%= link_to 'Back', profiles_path%>

