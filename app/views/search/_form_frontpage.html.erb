<% content_for :javascript do  %>
  title = "<%=escape_javascript(t('search.dots'))%>"
    $("#search_text_field").click(function(){
    if(this.value == title){
      this.value="";
    }
  });
  
    $("#search_text_field").blur(function(){
    if(this.value == ""){
      this.value= title;
    }
  });  

<%end%>

<div id="subtexto_busqueda">
  <ul class="menu1">
    <li>
      <div id="browse_select">
        <%=link_to ("<span>" + t("find.browse") + "</span>"),'dropdown',{:id=>"browse_select",:class => "browse_select"}%>
        <ul id="browse_menu" style="display:none">
          <li><%= link_to "Spaces", spaces_path %></li>
          <li><%= link_to "Upcoming events",search_all_path(:advanced => true,
                                                  :type => 'events',
                                                  :sort_mode => 'ascending',
                                                  :start_date => Time.now.strftime("%m/%d/%Y"),
                                                  :end_date =>(Time.now + 2.month).strftime("%m/%d/%Y"))%></li>
					<li><%= link_to "Recent events",search_all_path(:advanced => true,
                                                  :type => 'events',
                                                  :start_date => (Time.now - 2.month).strftime("%m/%d/%Y"),
                                                  :end_date => Time.now.strftime("%m/%d/%Y"))%></li>
					<li><%= link_to "Videos",search_all_path(:advanced => true,
                                                  :type => 'videos',
                                                  :start_date => (Time.now - 2.month).strftime("%m/%d/%Y"),
                                                  :end_date => Time.now.strftime("%m/%d/%Y"))%></li>
        </ul>
      </div>
    </li>
    <li> | </li>
    <li>
      <%=link_to t('help'),help_path %>
    </li>
  </ul>   
</div>

<% form_tag(@space.nil? ? search_all_path : space_search_all_path(@space), :method => 'get') do %>

  <span class="find">Find</span><input type="image" src="/images/find.png"/>
  <%= text_field_tag 'query',(params[:query] ? params[:query] :  t('search.dots') ), :id => 'search_text_field' %>
  
  <div id="advanced">
    <%= link_to t('advanced'), search_all_path(:advanced => true)%>
  </div>
<% end %>