<% menu(:home) %>

<% content_for :javascript do%>
	$("#query").click(function(){
	  if(this.value == "Search..."){
		  this.value="";
		}
	});
<%end%>

<% content_for :search do  %>
  <% form_tag(search_all_path(@space), :method => 'get') do %>
      <%= text_field_tag 'query',(params[:query] ? params[:query] :  "Search...")%>
      <%= image_submit_tag "buttons/search.png"%>
  <% end %>
<%end%>


<h2 class="search-results blue">Search Results</h2>

<%= render :partial =>'events'%>

<%= render :partial =>'users'%>

<%= render :partial =>'posts', :locals => {:first_five => true}%>

