<% menu(:home) %>

<% content_for :javascript do%>
	title = "<%=t('search.dots')%>"
	$("#query").click(function(){
	  if(this.value == title){
		  this.value="";
		}
	});
	
	$("#query").blur(function(){
	  if(this.value == ""){
		  this.value= title;
		}
	});

<%end%>

