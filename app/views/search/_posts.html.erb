<% content_for :sidebar do  %>
  <%if params[:reply]%>
    <div id="add_new_reply">
      <%@parent_post = Post.find(params[:reply])%>	
      <%= render :partial => "posts/new_reply" %>
    </div>  
  <%else%>
    <div id="add_new_thread" >
      <%= render :partial => "posts/new_thread" %>
    </div>
  <%end%>  
<% end %>

<div>
		<%if @posts == []%>
	     	<h3>No posts found</h3>
		<%elsif @posts.size == 1%>	   
	     	<h3>1 post was found</h3>
     		<% @posts.each do |post| %>
      			<%=render :partial => "posts/post", :locals => { :post =>  post, :selected_post => false}%> 
    		<%end%>
	  <%else%>
        <h3 class="red"><%=@posts.size%> posts was found</h3>
     		<% @posts.each do |post| %>
     			<%=render :partial => "posts/found_post", :locals => { :post =>  post, :selected_post => false} %> 
     		<%end%>
		<%end%>	
</div>
