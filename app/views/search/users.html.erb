<% menu(:people) %>

<% content_for :javascript do %>
	title = "<%=t('user.search')%>"
	$("#query").click(function(){
	  if(this.value == title){
		  this.value="";
		}
	});
	
	$("#query").blur(function(){
	  if(this.value == ""){
		  this.value= title;
		}
	});
<% end %>

<% content_for :search do  %>
  <%= render :partial => 'users/search' %>
<%end%>

