<% menu(:events) %>
<% content_for :javascript do %>
	title = "<%=t('search.events.dots')%>"
	$("#query").click(function(){
	  if(this.value == title){
		  this.value="";
		}
	});
	
	$("#query").blur(function(){
	  if(this.value == ""){
		  this.value= title;
		}
	});
<% end %>

<% content_for :search do  %>
  <% form_tag(search_events_path(@space), :method => 'get') do %>
      <%= text_field_tag 'query',(params[:query] ? params[:query] :  t('search.events.dots'))%>
	<button type="submit" class="blue_button basic_button"><%=t("button.go")%></button>
  <% end %>
	<div id="advanced">
	     <%= link_to t('advanced'), advanced_search_events_path(@space) %>
   </div>
<% end %>

<%= render :partial =>'events'%>
