<h1>Listing <%= BigbluebuttonServer.model_name.human %>:</h1>
<br/>
<div>
  <% @servers.each do |server| %>
    <ol>
      <li>
        <b><%= BigbluebuttonServer.human_attribute_name(:name) %>: <i><%= server.name %></i></b>
      </li>
      <ul>
        <li>
          <b><%= BigbluebuttonServer.human_attribute_name(:url) %>:</b> <%= server.url %>
        </li>
        <li>
          <b><%= BigbluebuttonServer.human_attribute_name(:salt) %>:</b> <%= server.salt %>
        </li>
        <li>
          <b><%= BigbluebuttonServer.human_attribute_name(:version) %>:</b> <%= server.version %>
        </li>
      </ul>
      <%= link_to t('show'), server, :class => 'basic_button small_button pale_button' %>
      <%= link_to t('edit'), edit_bigbluebutton_server_path(server), :class => 'basic_button small_button pale_button' %>
      <!-- provisory link on destroy button, need to change for destroy path -->
      <%= link_to t('destroy'), server, :confirm => t('are_you_sure'), :method => :delete, :class => 'basic_button small_button pale_button' %>
    </ol>
  <% end %>
  
</div>

<br/>

<%= link_to t('new_server'), new_bigbluebutton_server_path, :class => 'basic_button small_button pale_button' %>
