<%content_for :search do%>
  <div id="management-title">
	<h2 class="yellow">-<%= t('management.up') %>-</h2>
  </div>
<%end%>

	<%= render :partial => 'manage/menu' %>
<div id="manage">
  <p>
    <label><%= t('site.name') %>:</label>
    <span><%= sanitize current_site.name %></span>
  </p>

  <p>
    <label><%= t('site.description') %>:</label> 
    <span><%= sanitize current_site.description %></span>
  </p>

  <p>
    <label><%= t('site.domain') %>:</label> 
    <%= sanitize current_site.domain %>
  </p>

  <p>
    <label><%= t('site.ssl') %>:</label> 
    <%= current_site.ssl? %>
  </p>

  <p>
    <label><%= t('site.email') %>:</label> 
    <%= sanitize current_site.email %>
  </p>

  <p>
    <label><%= t('site.exception_notifications') %>:</label>
    <%= current_site.exception_notifications? %>
  </p>

  <p>
    <label><%= t('site.exception_notifications_email') %>:</label>
    <%= sanitize current_site.exception_notifications_email %>
  </p>
  
  <p>
    <label><%= t('site.signature') %>:</label>
    <%= current_site.signature_in_html %>
  </p>

  <div id="site_button" class="button_wrapper">
    <%= link_to "<span>" + t('button.edit') + "</span>", edit_site_path,:class => "blue_button basic_button"%>
  </div>
</div>
