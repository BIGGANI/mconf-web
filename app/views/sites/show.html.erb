  <%= render :partial => 'search/form' %>
<%end%>

<%= render :partial => 'manage/menu' %>

<div id="manage">
  <p>
    <label><%= t('site.name') %>:</label>
    <span><%= sanitize current_site.name %></span>
  </p>

  <p>
    <label><%= t('site.description') %>:</label> 
    <span><%= sanitize current_site.description %></span>
  </p>

  <p>
    <label><%= t('site.domain') %>:</label> 
    <%= sanitize current_site.domain %>
  </p>

  <p>
    <label><%= t('site.presence_domain') %>:</label> 
    <%= sanitize current_site.presence_domain %>
  </p>

  <p>
    <label><%= t('site.cm_domain') %>:</label> 
    <%= sanitize current_site.cm_domain %>
  </p>

  <p>
    <label><%= t('site.locale') %>:</label> 
    <%= sanitize current_site.locale %>
  </p>

  <p>
    <label><%= t('site.chat_group_service_jid') %>:</label> 
    <%= sanitize current_site.chat_group_service_jid %>
  </p>
        
  <p>
    <label><%= t('site.vcc_user_for_chat_server') %>:</label> 
    <%= sanitize current_site.vcc_user_for_chat_server %>
  </p>

  <p>
    <label><%= t('site.ssl') %>:</label> 
    <%= current_site.ssl? %>
  </p>

  <p>
    <label><%= t('site.email') %>:</label> 
    <%= sanitize current_site.email %>
  </p>

  <p>
    <label><%= t('site.feedback_url') %>:</label> 
    <%= sanitize current_site.feedback_url %>
  </p>

  <p>
    <label><%= t('site.exception_notifications') %>:</label>
