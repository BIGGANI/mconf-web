= render :partial => 'manage/menu'

= simple_form_for @site, :url => site_path, :html => { :id => "form-edit-site", :method => :put, :multipart => true, :class => 'single-column' } do |f|
  .left-column
    = f.input :name
    = f.input :description, :as => :text, :input_html => { :rows => 5 }
    = f.input :domain
    = f.input :locale, :collection => available_locales
    = f.input :timezone, :as => :time_zone
    = f.input :signature, :as => :text, :input_html => { :rows => 5 }
    = f.input :ssl, :as => :boolean
    = f.input :feedback_url, :hint => t('simple_form.hints.site.feedback_url', :default_url => webconf_feedback_index_path)
    = f.input :webconf_auto_record, :as => :boolean
    = f.input :analytics_code
    = f.input :shib_enabled, :as => :boolean
    = f.input :shib_email_field
    = f.input :shib_name_field
    = f.input :ldap_enabled, :label => t('site.ldap_enabled'), :as => :boolean
    = f.input :ldap_host, :label => t('site.ldap_host'), :hint => t('site.ldap_host_tip')
    = f.input :ldap_port, :label => t('site.ldap_port'), :hint => t('site.ldap_port_tip')
    = f.input :ldap_user, :label => t('site.ldap_user'), :hint => t('site.ldap_user_tip')
    = f.input :ldap_user_password, :label => t('site.ldap_user_password'), :as => :showable_password, :hint => t('site.ldap_user_password_tip')
    = f.input :ldap_user_treebase, :label => t('site.ldap_user_treebase'), :hint => t('site.ldap_user_treebase_tip')
    = f.input :ldap_username_field, :label => t('site.ldap_username_field'), :hint => t('site.ldap_username_field_tip')
    = f.input :ldap_email_field, :label => t('site.ldap_email_field'), :hint => t('site.ldap_email_field_tip')
    = f.input :ldap_name_field, :label => t('site.ldap_name_field'), :hint => t('site.ldap_name_field_tip')
  .right-column
    = f.input :smtp_login
    = f.input :smtp_password, :as => :showable_password
    = f.input :smtp_sender
    = f.input :smtp_domain
    = f.input :smtp_server
    = f.input :smtp_port
    = f.input :smtp_use_tls
    = f.input :smtp_auto_tls
    = f.input :smtp_auth_type
    = f.input :exception_notifications, :as => :boolean
    = f.input :exception_notifications_email
    = f.input :exception_notifications_prefix
    = f.input :chat_enabled, :as => :boolean
    = f.input :presence_domain
    = f.input :xmpp_server
    = f.input :external_help
  = f.button :wrapped, :cancel => site_path, :value => t("_other.save")
