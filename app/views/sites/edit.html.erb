<%= content_for :headers do %>
  <%= javascript_include_tag 'jquery/jquery.filestyle' %>
<% end %>

<%= content_for :javascript do %>
  $("input[type=file]").filestyle({
    image: "/assets/buttons/browse.png",
    imageheight : 23,
    imagewidth : 63,
    width : 237
  });

  $("#site_email_password_show").livequery('click', function(event) {
    if ($(this).is(':checked')) {
      changeInputTextType("#current_site_email_password", 'text');
    } else {
      changeInputTextType("#current_site_email_password", 'password');
    }
  });
<% end %>


  <%= render :partial => 'manage/menu' %>
<div id="manage">

  <%= error_messages_for :current_site %>

<%= form_for(:current_site, :url => site_path, :html => { :method => :put, :multipart => true }) do |f| %>
  <p>
    <%= f.label :name, t('site.name') %>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :description, t('site.description') %>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :domain, t('site.domain') %>
    <%= f.text_field :domain %>
  </p>

  <p>
    <%= f.label :email, t('site.email') %>
    <%= f.text_field :email %>
    <%= image_tag("icons/help.png",:title=>t('site.email_tip'),:size=>"16x16",:class=>"icon tooltipped upwards rightwards",:style=>"cursor:pointer").html_safe %>
  </p>

  <p>
    <%= f.label :email_password, t('site.email_password') %>
    <%= f.password_field :email_password %>
    <%= image_tag("icons/help.png",:title=>t('site.email_password_tip'),:size=>"16x16",:class=>"icon tooltipped upwards rightwards",:style=>"cursor:pointer").html_safe %>
    <%= check_box_tag 'site_email_password_show' %><%= t('show_question') %>
  </p>

  <p>
    <%= f.label :locale, t('site.locale') %>
    <%= f.select :locale, I18n.available_locales %>
  </p>

  <p>
    <%= f.label :signature, t('site.signature') %>
    <%= f.text_area :signature %>
  </p>

  <p>
    <%= f.label :ssl, t('site.ssl') %>
    <%= f.check_box :ssl %>
    <%= image_tag("icons/help.png",:title=>t('site.ssl_tip'),:size=>"16x16",:class=>"icon tooltipped upwards rightwards",:style=>"cursor:pointer").html_safe %>
  </p>

  <p>
    <%= f.label :feedback_url, t('site.feedback_url') %>
    <%= f.text_field :feedback_url %>
    <%= image_tag("icons/help.png",:title=>t('site.feedback_url_tip', :default_url => webconf_feedback_index_path),:size=>"16x16",:class=>"icon tooltipped upwards rightwards",:style=>"cursor:pointer").html_safe %>
  </p>

  <p>
    <%= f.label :analytics_code, t('site.analytics_code') %>
    <%= f.text_field :analytics_code %>
    <%= image_tag("icons/help.png",:title=>t('site.analytics_code_tip'),:size=>"16x16",:class=>"icon tooltipped upwards rightwards",:style=>"cursor:pointer").html_safe %>
  </p>

  <p>
    <%= f.label :exception_notifications, t('site.exception_notifications') %>
    <%= f.check_box :exception_notifications %>
    <%= image_tag("icons/help.png",:title=>t('site.exception_notifications_tip'),:size=>"16x16",:class=>"icon tooltipped upwards rightwards",:style=>"cursor:pointer").html_safe %>
  </p>

  <p>
    <%= f.label :exception_notifications_email, t('site.exception_notifications_email') %>
    <%= f.text_field :exception_notifications_email %>
    <%= image_tag("icons/help.png",:title=>t('site.exception_notifications_email_tip'),:size=>"16x16",:class=>"icon tooltipped upwards rightwards",:style=>"cursor:pointer").html_safe %>
  </p>

  <p>
    <%= f.label :exception_notifications_prefix, t('site.exception_notifications_prefix') %>
    <%= f.text_field :exception_notifications_prefix %>
  </p>

  <p>
    <%= f.label :shib_enabled, t('site.shib_enabled') %>
    <%= f.check_box :shib_enabled %>
  </p>

  <p>
    <%= f.label :shib_email_field, t('site.shib_email_field') %>
    <%= f.text_field :shib_email_field %>
    <%= image_tag("icons/help.png",:title=>t('site.shib_email_field_tip'),:size=>"16x16",:class=>"icon tooltipped upwards rightwards",:style=>"cursor:pointer").html_safe %>
  </p>

  <p>
    <%= f.label :shib_name_field, t('site.shib_name_field') %>
    <%= f.text_field :shib_name_field %>
    <%= image_tag("icons/help.png",:title=>t('site.shib_name_field_tip'),:size=>"16x16",:class=>"icon tooltipped upwards rightwards",:style=>"cursor:pointer").html_safe %>
  </p>

  <div id="site_button" class="margin-up">
        <button type="submit" class="basic_button blue_button"><%=t("button.update")%></button>
  </div>
<% end %>
</div>
