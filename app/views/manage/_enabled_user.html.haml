/ <div class="user enabled role_#{Site.current.role_for(user).name}">
.user.enabled
  = # raw link_logo(user, :size => 32, :url => user_path(user), :title => user.name) # LOGO-REMOVED
  = raw link_logo_image(:model => user, :size => '32', :title => user.name, :url => user_path(user), :class => 'logo logo-user')

  %ul.group_links
    = link_to (edit_user_path(user)) do
      = image_tag "icons/pencil.png", :alt => t('edit'), :title => t('edit')
    = link_to user_path(user), :confirm => t('are_you_sure'), :method => :delete do
      = image_tag "icons/cancel.png", :alt => t('disable'), :title => t('user.disable')

  .user_data
    %ul
      %li.main_text
        = t('name.one') + ":"
        %span.unified_user
          = sanitize link_to(user.name, user_path(user))
      %li.main_text
        = t('user.category') + ":"
        = user.superuser? ? t('user.admin') : t('user.normal_user')
