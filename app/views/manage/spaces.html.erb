<%content_for :search do%>
  <div id="management-title">
	<span>MANAGEMENT</span>
  </div>
<%end%>

<%content_for :javascript do%>
  $("#manage_space_filter").show();
	
	$("input#disabled").click(function(){
    $("div.disabled").slideToggle("slow");
  });
  
  $("input#enabled").click(function(){
    $("div.enabled").slideToggle("slow");
  });
	
<%end%>

<%content_for :sidebar do%>
	<div id="manage_space_filter" style="display:none">
		<h3>Show spaces:</h3>
	  <%= check_box_tag "enabled","enabled",true%><%= label_tag "Enabled"%><br />
		<%= check_box_tag "disabled","disabled",true%><%= label_tag "Disabled" %>
	</div>
<%end%>



<%= render :partial => 'menu' %>

<div id="manage">  
  <div "spaces">
    <%for space in @spaces%>
		  <%if space.disabled?%>
        <%= render :partial => 'disabled_space', :locals => {:space => space}  %>
			<%else%>
			  <%= render :partial => 'enabled_space', :locals => {:space => space} %>
			<%end%>
    <%end%> 
  </div>
</div>