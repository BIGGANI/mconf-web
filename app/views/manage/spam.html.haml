= render :partial => 'menu'

#manage
  #spam
    - if @spam_posts.empty? && @spam_events.empty?
      %p{:class=>"main_text"}
        = t("spam.report")
    - else
      - if !@spam_posts.empty?
        %h3 Spam in Posts
        - for spam in @spam_posts
          .spam_posts
            .group_links
              = link_to(icon_delete(), space_post_path(spam.space,spam), {:method => :delete, :class => 'delete_post_link', :title => t('comment.delete'), :confirm => t('delete.confirm', :element=> spam.title)})
              = link_to(icon_confirm(), space_post_path(spam.space,spam,:post => { :spam => false }), {:method => :put, :class => 'delete_post_link', :title => t('comment.delete'), :confirm => t('comment.not_spam', :element=> spam.title)})
            .spam_title
              Post Title:
              = link_to spam.title, space_post_path(spam.space, spam),:class=>"unified_posts"
      - if !@spam_events.empty?
        %h3= t('event.spam')
        - for spam in @spam_events
          .spam_posts
            Event Title:
            = link_to spam.title, space_event_path(spam.space, spam),:class=>"unified_event"
