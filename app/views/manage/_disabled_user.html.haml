.thread.thread-user.thread-no-hover.user-wrapper.user-simple.user-disabled{:class => "#{cycle("thread-even" , "thread-odd")}"}
  .logo-in-thread
    = raw logo_image(user, :size => '32', :title => user.name, :url => user_path(user), :class => 'logo logo-user')

  %ul.management-links
    = link_to icon_confirm(:alt => t('enable'), :title => t('user.enable')), enable_user_path(user.id), :method => :post

  .user-text
    %span.user-name
      = highlight(sanitize(user.full_name), params[:q])
      = "(#{highlight(user.username, params[:q])}, #{highlight(user.email, params[:q])})".html_safe
