<div id="yui-main">
<div class="yui-b main_column">
	<% rounded(:class => "tips") do %>
	<div class="contenido_main">
		
<p>
  <b>Title:</b>
  <%=sanitize @entry.title %>
</p>

<% unless @entry.description.blank? %>
<p>
  <b>Description:</b>
  <%=sanitize @entry.description %>
</p>
<% end %>

<% unless @entry.tag_list.blank? %>
<p>
  <b>Tags:</b>
  <%= @entry.tag_list %>
</p>
<% end %>
	<%for children in @attachment_children -%>
	  <%if children.content_type == "Attachment"%>
		<%= render :partial =>'attachments/attachment' , :locals => {:children => children}%>
		<br/>
	  <%end%>
	  <%end%>

<br>
<%= link_to_function 'New Comment', "new Element.toggle('new_comment_form');" %> |
<%= link_to 'Edit', edit_space_article_path(@space, @content) %> |
<%= link_to 'Back', space_articles_path(@container) %>
</div>
<%end%>

<div id="new_comment_form" style="display: none;">
<% rounded(:class => "tips") do %>
<%if @errors==true%>
	<% unless error_messages_for(:content).blank? && error_messages_for(:entry_).blank?  -%>
<div class="errors">
  <%= error_messages_for :content %>
  <%= error_messages_for :entry_ %>
</div>
<% end -%>
<%end%>

  <% @content = Article.new() %>
  <% form_for(:entry, :url => space_articles_path(@space), :html => { :multipart => true }) do -%>
<p>
    <b>Title</b><br />
    <%= text_field_tag :title %>
    </p>
    <p>
      <b>Text</b><br />
      <%= fckeditor_textarea(:content, :text, :toolbarSet => 'Simple', :width => '100%', :height => '400px') %>
    </p>
	 <%= render :partial => 'articles/attach', :locals => {:comment => true} %>
    <%= hidden_field_tag 'tag[add_tag]', "" %>
	<%= hidden_field_tag 'entry[parent_id]', @entry.id.to_s %>
    <%= submit_tag "Create" %>
	
  <% end -%>
  <%end%>
</div>

<%if @errors == true%>
<script language="JavaScript">
	new Element.toggle('new_comment_form');
</script>
<%@errors = false%>
<%end%>

<% div_for :comment_children do %>
  <h2>Comments</h2>

  <%= render :partial => "articles/comment", :collection => @comment_children %>

<% end if @comment_children.any? -%>


</div>
</div>
<%= render :partial =>'shared/sidebar'%>
