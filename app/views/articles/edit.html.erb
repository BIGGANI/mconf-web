<div id="yui-main">
<div class="yui-b main_column">
	<% rounded(:class => "tips") do %>
<h1>Edit <%= @post.content.class.to_s %></h1>

<% unless error_messages_for(:post).blank? && error_messages_for(:content).blank? -%>
<div class="errors">
  <%= error_messages_for :post %>
  <%= error_messages_for :content %>
</div>
<% end -%>

<% form_for(:post, :url => space_article_path(@space,@post.content), :html => {:multipart => true , :method => :put }) do |f| -%>

  <%= render :partial => "articles/form", :object => f  %>

  <%= submit_tag "Update" %>

<% end -%>


<% end -%>
</div>
</div>
<%= render :partial =>'shared/sidebar'%>
