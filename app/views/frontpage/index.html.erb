<% content_for :"global-header" do %>
  <%= render :partial => "global_header" %>
<% end %>

<div id="page-header">

  <div id="page-header-content">
    <div class="headline"><%= t('frontpage.project_description').html_safe %></div>

    <div class="links">
      <ul>
        <li>
          <a class="link-title" href="http://inf.ufrgs.br/prav/gtmconf"><%= t('frontpage.links.project_website') %></a><br/>
          <span class="link-description"><%= t('frontpage.links.project_website_desc') %></span>
        </li>
        <li>
          <a class="link-title" href="https://github.com/mconf"><%= t('frontpage.links.source_code') %></a><br/>
          <span class="link-description"><%= t('frontpage.links.source_code_desc') %></span>
        </li>
        <li>
          <a class="link-title" href="http://code.google.com/p/mconf"><%= t('frontpage.links.docs') %></a><br/>
          <span class="link-description"><%= t('frontpage.links.docs_desc') %></span>
        </li>
      </ul>
    </div>
  </div>

</div>

<div id="content-middle">
  <%= render :partial => "components" %>

  <div id="content-left-wrapper">

    <div id="content-spaces">
      <div class="section-title">
        <h2>Public Spaces</h2>
        <div class="subtitle">
          <span>Spaces are discussion groups for people with similar interests. </span><a href="<%= spaces_path %>">View the complete list...</a>
        </div>
        <%= render_clearer %>
      </div>
      <%= render :partial => 'space_list', :locals => { :spaces => @most_active_spaces } %>
    </div>

    <div id="content-stats">
      <div class="section-title">
        <h2>Statistics</h2>
        <div class="subtitle">
          <span>Usage statistics for mconf.org</span>
        </div>
        <%= render_clearer %>
      </div>

      <div class="data">
        <div class="content-block">
          <span class="param">Users:</span>
          <span class="value"><%= @stats[:users] %></span>
        </div>
        <div class="content-block">
          <span class="param">Spaces:</span>
          <span class="value"><%= @stats[:spaces] %></span>
        </div>
        <div class="content-block">
          <span class="param">Events:</span>
          <span class="value"><%= @stats[:events] %></span>
        </div>
      </div>

    </div>

  </div>

  <div id="content-right-wrapper">

    <div id="content-news">
      <div class="section-title">
        <h2>News</h2>
        <div class="subtitle">
          <span>What's currently happening in Mconf?</span>
        </div>
        <%= render_clearer %>
      </div>
      <div class="graphics">
        <%= image_tag('frontpage/mconf-graphics-screenshot.png', :size => '300x137') %>
      </div>
    </div>

  </div>

