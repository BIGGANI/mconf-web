= simple_form_for [@event, @participant], :html => { :class => "single-column" } do |f|
  .form-inputs
    = f.input :email, :readonly => current_user.present?, :autofocus => true

    - if current_user.blank? # show recaptcha for logged out users
      = recaptcha_tags
      %br

  = f.button :submit, t(".submit"), :class => "pull-left btn btn-primary"
