-# locals: user

- if can?(:read, user.profile!)
  .user-wrapper.user-simple
    .logo-in-threadw
      = # link_logo(user, :size => 32, :url => user_path(user), :title => user.name).html_safe # LOGO-REMOVED
      = link_logo_image(user, :size => '32', :url => user_path(user), :title => user.name)
    .user-text
      = link_to sanitize(user.full_name), user_path(user), :class => 'user-name'
      %span.user-organization= sanitize(user.organization)
