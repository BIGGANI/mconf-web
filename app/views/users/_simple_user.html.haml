- if user.profile!.authorize?(:read, :to => current_user)
  .user-wrapper.user-simple
    .logo-in-thread
      = link_logo(user, :size => 32, :url => user_path(user), :title => user.name).html_safe
    .user-text
      = link_to sanitize(user.full_name), user_path(user), :class => 'user-name'
      %span.user-organization= sanitize(user.organization)
