<div id="login_div"  class="blue_title">
	<h3>User registration</h3>
	<%= error_messages_for :user %>
	<% form_for :user, :url => users_path do |f| -%>
		
		<%= render :partial => 'form', :locals => { :f => f } %>
		
		<div id="captcha"><%= show_simple_captcha(:object=> :user) %> </div>
		
		<p><%= submit_tag 'Register' %></p>
	<% end -%>
	<p>
  <%= link_to 'Log in', login_path, :class => "login_lightbox_link" %><br />
  <%= link_to 'I have lost my password', lost_password_path, :class => "login_lightbox_link" %>
  </p>
</div>
