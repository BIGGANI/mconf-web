

<div id="yui-main">
<div class="yui-b main_column">
<% rounded(:class => "tips") do %>
<%if @users.length== 0%>
<%= "No users found"%>
<%else%>
<table  WIDTH=95% BORDER=0 CELLSPACING=0 CELLPADDING=0 align='center'">
	<tr><td align="center">Name</td><td align="center">Lastname</td><%if logged_in?%><td align="center">Email</td><%end%><td align="center">Organization</td><td align="center">Role</td><td align="center">Tags</td>
</tr>
<%for user in @users do%>
<%if user.profile != nil%>
<tr>
<td align="center"><%=link_to user.profile.name, user_profile_path(current_user) if user.profile.name%><%= link_to user.login,  user_profile_path(current_user, @space) unless user.profile.name%><br></td>
<td align="center"><%= user.profile.lastname%><br></td>
<%if logged_in?%><td align="center"><%= user.email%><br></td><%end%>
<td align="center"><%= user.profile.organization%><br></td>
<td align="center">
<%=@space.roles_for(user).map(&:name).join(",")%>
</td>
<td align="center"><%= user.tag_list if user.tag_list != nil%><br></td>



</tr>
<%else%>
<tr>
<td align="center"><%=user.is_a?(User) ? link_to(user.name, user_profile_path(user)) : user.name %><br></td>
<td></td><%if logged_in?%><td align="center"><%= user.email%><br></td><%end%><td></td> 
<td align="center">
<%=@space.roles_for(user).map(&:name).join(",")%>
</td></tr>
<%end%>
<%end%>
</table>
<%end%>
<%end%>
</div>
</div>
	<%= render :partial =>'shared/sidebar_users'%>
