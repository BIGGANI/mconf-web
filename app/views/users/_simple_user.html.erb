<div class="user">
	<%if simple_user.authorize?([:read, :profile],:to=> current_user)%>
	  <div><%= link_logo(simple_user, :size => 32, :url => user_profile_path(simple_user), :title=>simple_user.name) %></div>
	<%else%>
  <div><%= logo(simple_user, :size => 32, :title=>simple_user.name) %></div>
	<%end%>
  <div class="user_data">
	<ul>
	  <li>
	    <span class="unified_user"><%=simple_user.authorize?([:read, :profile],:to=> current_user) ? link_to(simple_user.full_name, user_profile_path(simple_user),:class=>"unified_user") : sanitize(simple_user.full_name) %></span>

	  </li>
	  <li class="small-font main_text"><%=sanitize(simple_user.organization) %></li>	
	</ul>
  </div>
</div>
