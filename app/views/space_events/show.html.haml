- spaces_menu_at :events
= content_for :menu do
  = render :partial => 'spaces/menu'
- atom_link_header(space, Event.new, :title => "#{t('event.other')} - #{space.name}")

- if @event.is_happening_now?
  .events-hapenning-now
    = render :partial => "event_card", :locals => { :event => @event }
- else
  = render :partial => "event_card", :locals => { :event => @event }

- if can?(:update, @event)
  = render :partial => "event_invitations", :locals => { :event => @event }
