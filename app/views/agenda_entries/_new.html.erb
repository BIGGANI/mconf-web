<h1>New agenda entry</h1>

<% form_for(@agenda_entry, :url=>space_event_agenda_agenda_entries_path(@space, @event), :html => {:method => :post}) do |f| %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :start_time %><br />
    <%= f.datetime_select :start_time %>
  </p>
  <p>
    <%= f.label :end_time %><br />
    <%= f.datetime_select :end_time %>
  </p>
#need to choose in script if check box is disabled or not if (agenda_entry.end_time - agenda_entry.start_time) < AgendaEntry::MIN_TO_EXCLUDE
  <p>
  	<%= f.check_box :exclude_from_recording %>
    <%= f.label :exclude_from_recording %>
  </p>
  <p>
  	<%= f.check_box :exclude_from_recording, :disabled => '' %>
    <%= f.label :exclude_from_recording %>
  </p>
  <p>
    <button type="submit" class='create-space' id="add_entry_button"><%=t("button.create")%></button>
  </p>
<% end %>