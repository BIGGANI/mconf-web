
<div class="agenda_new_entry">
  <div class="agenda_blue_title"><%=t('agenda.entry.new')%></div>

  <% form_for (prepare_for_form(@agenda_entry), :url=>space_event_agenda_agenda_entries_path(@space, @event), :html => {:method => :post, :multipart => true}) do |f| %>

    <div class="margin-up"><label for="title" id="agenda_title_label"><%= t('agenda.entry.title') %></label><br/>
    <%= f.text_field :title %></div>
  
    <div class="margin-up">
      <label for="speakers"><%= t('agenda.entry.speakers') %></label><br/>
      <%=select(:speakers, :name, @space.users.map{|u| u.login}, {}, {:multiple=>"multiple"})%>
    </div>
  
    <div class="margin-up"><label for="description"><%= t('description') %></label><br/>
    <%= f.text_area :description, :size => "34x7" %></div>
  
    <input type="hidden" id="entry_day" name="entry_day" value="">
  
    <div class="without_javascript">
      <div class="margin-up"><label for="start_time"><%= t('agenda.entry.start_time') %></label><br/>
      <%= f.datetime_select :start_time %></div>

      <div class="margin-up"><label for="end_time"><%= t('agenda.entry.end_time') %></label><br/>
      <%= f.datetime_select :end_time %></div>
    </div>
 <!--
    <div class="margin-up" id="record_block">
      <%= f.check_box :record %>
      <%= f.label :record %>
	  <span id="cannot_exclude"> - <%= t('agenda.entry.cannot_exclude') + " " + AgendaEntry::MINUTES_NOT_EXCLUDED.to_s + " " + t('agenda.entry.minutes')%>.</span>
    </div>
 -->
  	<div class="margin-up"><label for="attachment"><%= t('attachment.one') %></label><br/>
      <% f.fields_for :attachment do |attachment_form| %>
        <%= attachment_form.file_field :uploaded_data %>
				<div class="margin-up"><label for="attachment_tags"><%= t('tag.attachment') %></label><br/>
        <%= attachment_form.tags_select()%></div>
      <%end%>
    </div>

    <div class="margin-up">
      <button type="submit" class='create-space' id="add_entry_button"><%=t("button.create")%></button>
      <input type="button" value="<%=t('close')%>" class="agenda_new_close"/>
    </div>
  <% end %>
</div>
