<div class="agenda_entry margin-up"> <!--class="profile-box"-->

  <div class="entry_title">
      <ul class="group_links group_agenda_links">
        <%if agenda_entry.embedded_video.present? then%>
	  	    <%=image_tag("icons/16/play.png", :alt => t('agenda.entry.has_video'), :title=>t('agenda.entry.has_video'), :class=>"entry_video_link") %>
        <%end%>
		    <%if agenda_entry.attachments then%> 
          <%=image_tag ("icons/attach.png", :title=>t('agenda.entry.has_attachment'))%>
        <%end%>

        <li><%=link_to_function(image_tag("icons/pencil.png", :alt => t('edit'), :title => t('edit')) , "return false;", :class=>"edit_entry", :name=>agenda_entry.id.to_s) if event.authorize?(:update, :to => current_user) || agenda_entry.authorize?(:update, :to => current_user) %></li>
        <li><%=link_to(image_tag("icons/cancel.png", :alt => t('delete.one')) , space_event_agenda_agenda_entry_path(@space, @event, agenda_entry), :method => :delete, :title => t('agenda.del_entry'), :confirm => t('delete.confirm', :element=>agenda_entry.title)) if event.authorize?(:update, :to => current_user) || agenda_entry.authorize?(:delete, :to => current_user) %></li>
      </ul>

    <div class="title_name_and_hour">
	  <div id="help" title="<%= t('agenda.expand_help') %>"></div>
      <span class="entry_hour">
        <%=h agenda_entry.start_time.strftime("%H:%M") %> <%=t('to')%> <%=h agenda_entry.end_time.strftime("%H:%M") %>
      </span>
      <span class="entry_name">
        <%=h agenda_entry.title %>
      </span>
    </div>

  </div>

  <div class="agenda_entry_description" <%if !expanded %> style="display:none" <%end%>> 
    <%if agenda_entry.embedded_video.present?%>
	  
      <div class="video_preview" id="video_preview<%=agenda_entry.id.to_s%>">
        <%if !agenda_entry.video_thumbnail.present?%>
          <%=link_to_function image_tag("default_background.jpg", :alt => t('agenda.entry.video')),'request_video('+agenda_entry.id.to_s+')', :class=>"entry_video_link" %>
        <%else%>
          <%=link_to_function image_tag(agenda_entry.video_thumbnail, :alt => t('agenda.entry.video')),'request_video('+agenda_entry.id.to_s+')', :class=>"entry_video_link" %>
        <%end%>
        <span class="play_icon"></span>
      </div>

      <div class="video_hide video_preview" id="video_hide<%=agenda_entry.id.to_s%>" style="display:none">
        <%=link_to_function 'Hide video','hide_video('+agenda_entry.id.to_s+')', :class=>"hide_video_link" %>
      </div>
    <%end%>
    <ul class="agenda_list_content">
      <li class="unified_user">  
      	<%isfirst=true%>
      	<%agenda_entry.actors.each do |speaker|%>
          <%if isfirst%>
            <%isfirst=false%>
          <%else%>
            ,
          <%end%>
          <%=speaker.authorize?([:read, :profile],:to=> current_user) ? link_to(highlight(speaker.name,@query),user_profile_path(speaker),:class=>"unified_user"): ("<span class='unified_user'>" + sanitize(highlight(speaker.name,@query) + "</span>"))%>
        <%end%>
        <%if agenda_entry.speakers && !agenda_entry.speakers.empty?%>
          <%unless isfirst%>
            ,
          <%end%>
          <span class="unified_user"><%= agenda_entry.speakers %></span>
        <%end%>
      </li>
	  
      <li><%=h agenda_entry.description %></li>
      <% agenda_entry.attachments.each  do |a| %>
        <%=image_tag(logo_image_path(a, :size => a.thumbnail_size)) %>
        <%=a.filename %>
      <%end %>
		     </ul>
    <div id="agenda_entry_video<%=agenda_entry.id%>" >		
    </div>
		
  </div>

</div>