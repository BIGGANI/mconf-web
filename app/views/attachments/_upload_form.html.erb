<%content_for :javascript do %>
 
 $("#attachment__tags").fcbkcomplete({
			cache: true,
            filter_case: false,
            filter_hide: true,
            firstselected: true,
            filter_selected: true,
            maxshownitems: 4,
			newel: true
			
	});



<%end%>

<div id="add_new_doc">	

<h3><%=t('document.add') %></h3>

<% @attachment ||= Attachment.new %>
<% @attachment.post ||= Post.new %>

<%form_for (@attachment, :url=> space_attachments_path(@space), :html => { :multipart => true}) do |f|%>
  <div id="cabinet">
  <%= f.file_field :uploaded_data, :class=>"file_1"%>
</div>
<br/>
<h4><%=t('tag.new')%></h4>
 
<div id=tags><%= select(:attachment, :_tags, attachment.space.tags.map{|u| u.name}, {}, {:multiple=>"multiple"})%></div>

  <!--<%= image_submit_tag "buttons/create.png" %>-->
  <br/>
  <br/>
  <% f.fields_for :post do |post_form| %>  
	<div>
		<%= post_form.label :title, t('title') %><br/>
		<%= post_form.text_field :title %>
		<%= post_form.label :text, t('text') %><br/>
		<%= post_form.text_area :text%>
	</div>

<% end %>
  
   <button type="submit"><%=t("button.upload")%></button>
<%end%>
</div>
