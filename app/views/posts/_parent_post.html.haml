- if @show_view
  .parent-post-logo
    = link_logo_image(post.author, :size => '32', :title => post.author.name, :url => user_path(post.author)) if post.author

.post-content
  %ul
    - if @show_view
      %li
        = link_to(post.author.name, user_path(post.author),:class=>"unified_user")
        %span.updated
          = t('updated_time_ago', :time => time_ago_in_words(post.updated_at))

    %li.main_text
      = sanitize(auto_link(post_format(post.text)))
