<div id="lightbox-logo"><span><%= image_tag("bola_global_peque.png",:class=>"icon")%><%= t('vcc') %></span> > <%= t('thread.edit') %></div>

<% menu :posts %>

<div id="new_thread_big">
	<div id="feedback_form">	
		<% form_for([ @space, post ], :id => "edit-form",:html => { :multipart => true }) do |f| -%>
		  <div>
		    <label for="Title"><%= t('title') %></label><br/>
		    <%= f.text_field :title, :size => 25, :class => "big_post_title" %>
		  </div>
		  <div id="post-buttons" class="actions margin-up">
		    <ul>
		      <li><%= link_to t('comment.one'), space_posts_path(@space, :edit => params[:edit]), { :id => 'new_comment_big_link',:class =>"big_options #{"selected" if (!params[:form] || params[:form]=='')}" } %></li>
		      <li><%= link_to t('photos'), space_posts_path(@space, :edit => params[:edit], :form => 'photos'), { :id => 'new_photo_big_link',:class =>"big_options #{"selected" if params[:form]=='photos'}" } %></li>
		      <li><%= link_to t('docs'), space_posts_path(@space, :edit => params[:edit], :form => 'docs'), { :id => 'new_doc_big_link',:class =>"big_options #{"selected" if params[:form]=='docs'}" } %></li>
			</ul>
		  </div>
			
		  <div id="new_photo_big_form" <%= 'style="display: none;"' if params[:form] != 'photos' %>>
		    <%= render :partial => "posts/form_photo", :object => f %>
		  </div>
		  <div id="big_textarea_div" >
		    <textarea id="big_textarea" name="post[text]" class="big_post_text"><%=params[:post_text]%></textarea>
		  </div>
		  <div class="margin-up"> 
		    <%= image_submit_tag "buttons/update.png" %>
		  </div>
		<% end -%>
	</div>
</div>	
