  <div id="parent_<%=thread.id%>" class="<%=cycle("even_thread" , "odd_thread")%>">
	<div class="thread_options">
	  <ul>
	  	<li><%=link_to image_tag("icons/arrow-rotate-anticlockwise.png",:alt => "reply" ), space_posts_path(@space,:reply_to =>thread),{:class => 'reply_to_link', :title => "reply"}if @space.authorizes?([:create, :content],:to => current_user)%></li>
		<li><%=link_to image_tag("icons/cross.png", :alt => "delete" ), space_post_path(@space,thread),{ :class => 'delete_thread', :confirm => "Do you want to delete this thread?", :method => :delete, :title => "delete" } if thread.authorizes?(:delete, :to => current_user)%></li>
		<li><%=link_to image_tag("icons/pencil.png", :alt => "edit",:class=>"icon" ), get_route(thread), :title => "edit" if thread.authorizes?(:update, :to => current_user)%></li>
	  </ul>
	</div>
	
  	<div class="thread-title">
  	<h2><%=image_tag("icons/comment.png")%><%=link_to (first_words(thread.title, 20), space_post_path(@space,thread))if @space.authorizes?([:read, :content],:to => current_user)%>
		<span class="updated"> Updated <%=time_ago_in_words(thread.updated_at)%> ago</span>
		</h2>  
	</div>

	<div class="<%=thread.three_last_comment().first.parent_id!= nil ?  "open" : "close"%>"> 
      <%for comment in thread.three_last_comment()%>
		<%=render :partial => "post" , :locals => { :post =>  comment, :selected_post => false}%>
	  <%end%>
	</div>
  </div>