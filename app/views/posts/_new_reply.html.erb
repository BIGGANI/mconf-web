<div id="new_reply">


<h3><%=link_to image_tag("arrow_right_up.png", :size=>"16x16",:title=>"Show Advanced Editor"), new_space_post_path(@space, :reply => post.id), :id => "big_new_reply", :class => "extract_form" %> <%=t("reply_to")%> <span class="unified_posts"><%= post.title %></span></h3>
  <div id="post-buttoms" class="actions">
    <ul>
      <li><%= link_to t('comment.one'), get_reply_route(post), { :id => 'new_comment_link',:class =>"new_reply_options #{"selected" if (!params[:form] || params[:form]=='')}" } %></li>
      <li><%= link_to t('photos'), get_reply_route(post,'photos'),  { :id => 'new_photo_link',:class =>"new_reply_options #{"selected" if params[:form]=='photos'}" } %></li>
      <li><%= link_to t('docs'), get_reply_route(post,'docs'), { :id => 'new_doc_link',:class =>"new_reply_options #{"selected" if params[:form]=='docs'}" } %></li>
    </ul>
  </div>

  <% form_for(prepare_for_form(Post.new, :parent_id => post.id), :html => { :multipart => true, :id => "reply-form" }) do |f| -%>
	
  <div id="new_photo_form" <%= 'style="display: none;"' if (params[:form] != 'photos' && params[:form] != 'docs') %>>
    <%= render :partial => "posts/form_attachments", :object => f %>
  </div>
  
 	<%= small_post_text_area %>
  
  <%if @show_view%>
    <%= hidden_field_tag :show, "true"%>
  <%end%>
  <%= f.hidden_field :parent_id %>
  <div class="float">
  <button type="submit" class="basic_button blue_button"><%=t("button.send")%></button>
  </div>
  <div class="float">
  <%= link_to t('thread.or_add_new'), space_posts_path(@space) %>
  </div>
<% end -%>
</div>
