<% content_for :javascript do %>
  $("#reply-form").submitWithAjax();
<% end %>

<h3>Reply to <%= post.title %></h3>
  <div id="post-buttoms">
    <ul>
      <li><%= link_to 'Comment', space_posts_path(@space, :reply_to => post.id), { :id => 'new_comment_link' } %></li>
      <li><%= link_to 'Photos', space_posts_path(@space, :reply_to => post.id, :form => 'photos'), { :id => 'new_photo_link' } %></li>
      <li><%= link_to 'Docs', space_posts_path(@space, :reply_to => post.id, :form => 'docs'), { :id => 'new_doc_link' } %></li>
    </ul>
  </div>

<% form_for([ @space, Post.new ], :html => { :multipart => true, :id => "reply-form" }) do |f| -%>
	
  <div id="new_photo_form" <%= 'style="display: none;"' if params[:form] != 'photos' %>>
    <%= render :partial => "posts/form_photo", :object => f %>
  </div>
	
  <div id="new_doc_form" <%= 'style="display: none;"' if params[:form] != 'docs' %>>
    <%= render :partial => "posts/form_doc", :object => f %>
  </div>

  <p>
    <%= f.text_area :text, :class => "span-6"%>
  </p>

  <%= hidden_field_tag "post[parent_id]", params[:reply_to]%>
  <%= submit_tag "Post Now!" %> <%= link_to 'or Add a new Thread', space_posts_path(@space) %>
<% end -%>
