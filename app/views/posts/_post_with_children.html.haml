#post_with_children
  .thread_content
    .thread-title-wrapper{:id => "parent_#{@post.id}"}
      %h2
        = image_tag("icons/comments.png")
        = link_to(@post.title, space_post_path(@space,@post),:class=>"unified_posts")
        %ul.thread_options
          - if user_signed_in? && !post.spam
            = link_to image_tag("icons/exclamation.png", :alt => t('spam.report')), spam_lightbox_space_post_path(@space,post),{:name => post.id, :class => 'spam_link', :title => t('spam.report')}
          %li
            - if can?(:update, @post)
              - image = image_tag("icons/pencil.png", :alt => t('edit'))
              - attrs = {:name => @post.id, :class => 'edit_post_link', :title => t('edit')}
              = link_to image, get_edit_route(@post), attrs
          %li
            - if can?(:destroy, @post)
              - image = image_tag("icons/cancel.png", :alt => t('delete.one'))
              - attrs = { :class => 'delete_thread', :method => :delete, :title => t('delete.one') , :confirm => t('delete.confirm', :element => @post.title)}
              = link_to image, space_post_path(@space,@post), attrs

  .thread-body
    = render :partial => "posts/parent_post" , :locals => { :post =>  @post, :selected_post => false}
  .odd-posts
    - for comment in @posts
      = render :partial => "post" , :locals => { :post =>  comment, :selected_post => false}