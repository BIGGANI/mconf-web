<h3>Add new post</h3>
  <div id="post-buttoms">
    <ul>
  	  <li><%= link_to_function 'Comment', "new Element.hide('new_reply_photo_form');new Element.hide('new_reply_doc_form');"%></li>
	  <li><%= link_to_function 'Photos', "new Element.show('new_reply_photo_form');new Element.hide('new_reply_doc_form');"%></li>
	  <li><%= link_to_function 'Docs', "new Element.show('new_reply_doc_form');new Element.hide('new_reply_photo_form');"%></li>
	</ul>
  </div>
<% form_for(:parent_post, :url => space_posts_path(@space), :html => { :multipart => true }) do |f| -%>
	
	<div id="new_reply_photo_form" style="display: none;">
	  <%= render :partial => "posts/form_photo", :object => f %>
	</div>
	
	<div id="new_reply_doc_form" style="display: none;">
	  <%= render :partial => "posts/form_doc", :object => f %>
	</div>
	<p>
    <%= f.text_area :text, :class => "span-6"%>
    </p>
	<%= hidden_field_tag "parent_post[parent_id]", @post.id%>
	<%= hidden_field_tag :show, "go_to_show"%>
	
    <%= submit_tag "Post Now!" %> <%= link_to_function 'or Add a new Thread', "new Element.toggle('add_new_thread');new Element.hide('add_new_reply');"%>
  <% end -%>