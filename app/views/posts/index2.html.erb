  <% rounded() do %>
    <div><h1><%= name_format(@title, 40, "") %></h1></div> 
	<div>
	  <span><%=link_to ("see normal view", space_posts_path(@space, :expanded=>false))%> </span>
	  <%= will_paginate @posts %>
	
	  <div>
	  	<form name="get_page" method="get">
	      <select selected="<%=params[:per_page]%>">
		    <%for valor in [10,25,50,100]%>
		      <%if valor.to_s == params[:per_page]%>
			    <option value="<%=valor%>" >Entries Shown: <%=valor%> </option>
		      <%else%>
			    <option value="<%=valor%>" >Entries Shown: <%=valor%> </option>
		      <%end%>
		    <%end%>				
	      </select>
	    </form>
	  </div>	
	<!--<%=link_to ("10", space_posts_path(@space, :expanded=>false, :per_page=> 10))%>|
	<%=link_to ("25", space_posts_path(@space, :expanded=>false, :per_page=> 25))%>|
	<%=link_to ("50", space_posts_path(@space, :expanded=>false, :per_page=> 50))%>|
	<%=link_to ("100", space_posts_path(@space, :expanded=>false, :per_page=> 100))%>-->
	</div>
  <%end%>
  <% for post in @posts -%>
	<%if postparent_id == nil%>
	  <% rounded() do %>
		<div>
    	  <% user = post.author%>
	 
    	  Post :: <%=link_to(sanitize(post.title), space_post_path(@space, post)) %> (<%= post.children.size.to_s %>), at <%= post.created_at.strftime("%d-%m-%Y") %> by <%= User.find(post.author).login unless user.profile%><%= user.profile.name if user.profile%> <%= user.profile.lastname if user.profile%> Tags: <%=post.tag_list%> <br>

		  <%@attachment_children = post.attachment%>
		  <%for children in @attachment_children -%>
		  <%= render :partial =>'attachment' , :locals => {:children => children}%>
		  <br/>
	  	  <%end%>
  		  Description: <%= post.description%><br>
	
		  <%if post.authorizes?(current_user, :update)%><%= link_to(image_tag("edit16.png"),edit_space_post_path(@space, post), :title=>"Edit Post") %><%end%> 
   		  <%if post.authorizes?(current_user, :delete)%><%= link_to(image_tag("delete16.png"), space_post_path(@space, post), :confirm => 'Are you sure?', :method => :delete, :title=>"Delete Post") %><%end%> 
   		  <%= link_to 'Comments', "#{ space_post_path(@space,post)}#comments" %>
		  <br/>
		</div>
	  <% end -%>
	<% end -%>
  <% end -%>

<%= render :partial =>'shared/sidebars'%>
