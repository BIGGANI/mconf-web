
<div id="yui-main">
<div class="yui-b main_column">
	
<h1><%= @title %></h1>
<% for post in @posts -%>
<% rounded(:class => "tips") do %>


 
    <% user = User.find(post.agent_id)%>
	<!-- 
	<%= post.content.class %>
	-->
    Post :: <%=link_to(sanitize(post.title), post_path(post)) %> (<%= post.container_posts.size %>), at <%= post.created_at.strftime("%d-%m-%Y") %> by <%= User.find(post.agent_id).login unless user.profile%><%= user.profile.name if user.profile%> <%= user.profile.lastname if user.profile%> Tags: <%=post.tag_list%> <br>
    <%if post.content_type == "CMS::AttachmentFu"%>
		<%= render :partial =>'attachments/attachment' , :locals => {:post => post}%>
	<%end%>
	
	
  	Description: <%= post.description%><br>
	
<%= link_to 'Edit', edit_post_path(post) %>
   <%= link_to 'Destroy', post_url(post), :confirm => 'Are you sure?', :method => :delete %>
   <%= link_to 'Comments', "#{ post_path(post) }#comments" %>

	
  </tr>


<br />
<% end -%>
<% end -%>
<%if @space.id == 1%>
<% for post in @public_posts%>
<% rounded(:class => "tips") do %>


 
    <% user = User.find(post.agent_id)%>
	
    <%= post.content.class %>:: <%=link_to(sanitize(post.title), post_path(post)) %> (<%= post.container_posts.size %>), at <%= post.created_at.strftime("%d-%m-%Y") %> by <%= user.profile.name if user.profile%> <%= user.profile.lastname if user.profile%> || Tags:  <br>
        
  	Description: <%= post.description%><br>
	
<%= link_to 'Edit', edit_post_path(post) %>
   <%= link_to 'Destroy', post_url(post), :confirm => 'Are you sure?', :method => :delete %>
   <%= link_to 'Comments', "#{ post_path(post) }#comments" %>

	
  </tr>


<br />
<% end -%>
<% end -%>
<% end -%>
</div>
</div>
<%= render :partial =>'shared/sidebars'%>


