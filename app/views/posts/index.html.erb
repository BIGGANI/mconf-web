  
<% content_for :headers do  %>
  <%=javascript_include_tag :defaults%>
<%end%>

<% content_for :search do  %>
  <% form_tag(search_posts_path(@space), :method => 'get') do %>
      <%= text_field_tag :query, params[:query] %>
	  <%= image_submit_tag "legacy/magnify2.png", :class=>'go'%>
  <% end %>
<%end%>

<% content_for :sidebar do  %>
  <%if params[:reply]%>
    <div id="add_new_reply">
      <%@parent_post = Post.find(params[:reply])%>	
      <%= render :partial => "new_reply" %>
    </div>  
  <%else%>
    <div id="add_new_thread" >
      <%= render :partial => "new_thread" %>
    </div>
  <%end%>  
<% end %>


  <% for post in @posts -%>
  
  		<b><%=link_to (post.title, space_post_path(@space,post))%></b>
		Updated <%=time_ago_in_words(post.updated_at)%> ago  
		<%=link_to "Reply", space_posts_path(@space,:reply => post)%>
		<%=link_to "Delete", space_post_path(@space,post), :method => :delete%>
		<div class="<%=post.three_last_comment().first.parent_id!= nil ?  "cerrada" : "rota"%>"> 
			<%for comment in post.three_last_comment()%>
			
			  <p><%=image_tag("legacy/avatar.png")%>
			  <%for attachment in comment.attachments%>
			    <%=image_tag(space_attachment_path(@space,attachment))%>
			  <%end%> 
			  <%=comment.text%></p>
			<%end%>
		</div>
		</br>
  <% end -%>
  
  <%= will_paginate @posts %>

	

<% render :partial =>'shared/sidebars'%>
