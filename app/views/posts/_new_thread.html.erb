    var new_id = new Date().getTime(); 
    $(this).before( attachment.replace(/NEW_RECORD/g, new_id) );
    $("#post_attachments_attributes_"+new_id+"__tags").fcbkcomplete({
        cache: true,
        filter_case: false,
        filter_hide: true,
        firstselected: true,
        filter_selected: true,
        maxshownitems: 4,
        newel: true,
        complete_opts: true
    }); 
  }); 
<%end%>

