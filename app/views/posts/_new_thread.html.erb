<h3>Add a new Thread</h3>
  <div id="post-buttoms">
    <ul>
      <li><%= link_to 'Comment', space_posts_path(@space) %></li>
      <li><%= link_to 'Photos', space_posts_path(@space, :form => 'photos') %></li>
      <li><%= link_to 'Docs', space_posts_path(@space, :form => 'docs')%></li>
	</ul>
  </div>
<% form_for(:post, :url => space_posts_path(@space), :html => { :multipart => true }) do |f| -%>
  <p>
    <label for="Title">Title</label><br/>
    <%= f.text_field :title, :size => 25 %>
  </p>
	
  <div id="new_photo_form" <%= 'style="display: none;"' if params[:form] != 'photos' %>>
    <%= render :partial => "posts/form_photo", :object => f %>
  </div>
	
  <div id="new_doc_form" <%= 'style="display: none;"' if params[:form] != 'docs' %>>
    <%= render :partial => "posts/form_doc", :object => f %>
  </div>

  <p>
    <%= f.text_area :text, :class => "span-6"%>
  </p>

  <%= submit_tag "Post Now!" %>
<% end -%>
