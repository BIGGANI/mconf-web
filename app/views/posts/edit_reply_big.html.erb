<% menu :posts %>

<div id="new_thread_big">
<h3>Edit comment</h3>
  <div id="post-buttoms" class="actions">
    <ul>
      <li><%= link_to 'Comment', space_posts_path(@space, :edit => params[:edit]), { :id => 'new_comment_big_link',:class =>"big_options #{"selected" if (!params[:form] || params[:form]=='')}" } %></li>
      <li><%= link_to 'Photos', space_posts_path(@space, :edit => params[:edit], :form => 'photos'), { :id => 'new_photo_big_link',:class =>"big_options #{"selected" if params[:form]=='photos'}" } %></li>
      <li><%= link_to 'Docs', space_posts_path(@space, :edit => params[:edit], :form => 'docs'), { :id => 'new_doc_big_link',:class =>"big_options #{"selected" if params[:form]=='docs'}" } %></li>
	</ul>
  </div>
<% form_for([ @space, post ], :id => "edit-form", :html => { :multipart => true }) do |f| -%>

  <div id="new_photo_big_form" <%= 'style="display: none;"' if params[:form] != 'photos' %>>
    <%= render :partial => "posts/form_photo", :object => f %>
  </div>
	<div id="big_textarea_div" >
    <textarea id="big_textarea" name="post[text]" class="big_post_text"><%=params[:post_text]%></textarea>
  </div>  
    <%= image_submit_tag "buttons/update.png" %>
  <% end -%>
</div>