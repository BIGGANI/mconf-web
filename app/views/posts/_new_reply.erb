<h3>Reply to <%=@parent_post.title%></h3>
  <div id="post-buttoms">
    <ul>
  	  <li><%= link_to_function 'Comment', "new Element.toggle('new_reply_comment_form');new Element.hide('new_reply_photo_form');new Element.hide('new_reply_doc_form');"%></li>
	  <li><%= link_to_function 'Photos', "new Element.toggle('new_reply_photo_form');new Element.hide('new_reply_comment_form');new Element.hide('new_reply_doc_form');"%></li>
	  <li><%= link_to_function 'Docs', "new Element.toggle('new_reply_doc_form');new Element.hide('new_reply_comment_form');new Element.hide('new_reply_photo_form');"%></li>
	</ul>
  </div>
<% form_for(:post, :url => space_posts_path(@space), :html => { :multipart => true }) do |f| -%>
    <%= hidden_field_tag "post[title]", @parent_post.title%>
    <div id="new_reply_comment_form">
      <%= render :partial => "form_comment", :object => f %>
	</div>
	
	<div id="new_reply_photo_form" style="display: none;">
	  <%= render :partial => "form_photo", :object => f %>
	</div>
	
	<div id="new_reply_doc_form" style="display: none;">
	  <%= render :partial => "form_doc", :object => f %>
	</div>
	
	<%= hidden_field_tag "post[parent_id]", params[:reply]%>
    <%= submit_tag "Post Now!" %> <%= link_to_function 'or Add a new Thread', "new Element.toggle('add_new_thread');new Element.hide('add_new_reply');"%>
  <% end -%>