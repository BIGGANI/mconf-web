<% content_for :javascript do %>
 $("#new_comment_link").addClass("selected");
 $(".edit_thread_options").click(function(){
 	$(".edit_thread_options").removeClass("selected");
	$(this).addClass("selected");});
<% end %>

<div id="edit_thread">
<h3>Edit thread</h3>
  <div id="post-buttoms" class="actions">
    <ul>
      <li><%= link_to 'Comment', space_posts_path(@space, :edit => params[:edit]), { :id => 'new_comment_link',:class =>"edit_thread_options" } %></li>
      <li><%= link_to 'Photos', space_posts_path(@space, :edit => params[:edit], :form => 'photos'), { :id => 'new_photo_link',:class =>"edit_thread_options" } %></li>
      <li><%= link_to 'Docs', space_posts_path(@space, :edit => params[:edit], :form => 'docs'), { :id => 'new_doc_link',:class =>"edit_thread_options" } %></li>
	</ul>
  </div>
<% form_for([ @space, post ], :html => { :multipart => true }) do |f| -%>
  <p>
    <label for="Title">Title</label><br/>
    <%= f.text_field :title, :size => 25 %>
  </p>
	
  <div id="new_photo_form" <%= 'style="display: none;"' if params[:form] != 'photos' %>>
    <%= render :partial => "posts/form_photo", :object => f %>
  </div>
	
  <div id="new_doc_form" <%= 'style="display: none;"' if params[:form] != 'docs' %>>
    <%= render :partial => "posts/form_doc", :object => f %>
  </div>
	
    <%= f.text_area :text, :class => "span-6"%>
    <%= submit_tag "Update" %>
  <% end -%>
</div>	
