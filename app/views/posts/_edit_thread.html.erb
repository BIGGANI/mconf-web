<% content_for :javascript do %>
  $(".edit_thread_options").click(function(){
 	$(".edit_thread_options").removeClass("selected");
	$(this).addClass("selected");});
<% end %>

<div id="edit_thread">


  <h3><%=link_to image_tag("arrow_right_up.png", :size=>"16x16",:title=>"Show Advanced Editor"), edit_space_post_path(@space, post), :id => "big_edit_thread", :class => "extract_form" %><%= t('thread.edit') %></h3>

	<% form_for([ @space, post ], :id => "edit-form",:html => { :multipart => true }) do |f| -%>
	  <div>
	    <label for="Title"><%= t('title') %>Title</label><br/>
	    <%= f.text_field :title, :size => 25, :class => "small_post_title" %>
	  </div>
	  <div id="post-buttoms" class="actions margin-up">
	    <ul>
	      <li><%= link_to t('comment.one'), space_posts_path(@space, :edit => params[:edit]), { :id => 'new_comment_link',:class =>"edit_thread_options #{"selected" if (!params[:form] || params[:form]=='')}" } %></li>
	      <li><%= link_to t('photos'), space_posts_path(@space, :edit => params[:edit], :form => 'photos'), { :id => 'new_photo_link',:class =>"edit_thread_options #{"selected" if params[:form]=='photos'}" } %></li>
	      <li><%= link_to t('docs'), space_posts_path(@space, :edit => params[:edit], :form => 'docs'), { :id => 'new_doc_link',:class =>"edit_thread_options #{"selected" if params[:form]=='docs'}" } %></li>
		</ul>
	  </div>
		
	  <div id="new_photo_form" <%= 'style="display: none;"' if params[:form] != 'photos' %>>
	    <%= render :partial => "posts/form_photo", :object => f %>
	  </div>
		
	  <div id="new_doc_form" <%= 'style="display: none;"' if params[:form] != 'docs' %>>
	    <%= render :partial => "posts/form_doc", :object => f %>
	  </div>
		
	    <%= f.text_area :text, :class => "small_post_text"%>
	    <button type="submit"><%=t("button.update")%></button>
  <% end -%>
</div>	
