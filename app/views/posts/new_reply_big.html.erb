<div id="lightbox-logo"><span><%= image_tag("bola_global_peque.png",:class=>"icon")%><%= t('vcc') %></span> > <%= t('reply_to_words', :words => first_words(@post.title, 40)) %></div>

<% menu :posts %>

<div id="new_thread_big">

<div id="feedback_form">
  <div id="post-buttons" class="actions">
    <ul>
      <li><%= link_to t('comment.one'), new_space_post_path(@space, :reply => @post.id), { :id => 'new_comment_big_link',:class =>"big_options #{"selected" if (!params[:form] || params[:form]=='')}" } %></li>
      <li><%= link_to t('photos'), new_space_post_path(@space, :reply => @post.id, :form => "photos"),  { :id => 'new_photo_big_link',:class =>"big_options #{"selected" if params[:form]=='photos'}" } %></li>
      <li><%= link_to t('docs'), new_space_post_path(@space, :reply => @post.id, :form => "docs"), { :id => 'new_doc_big_link',:class =>"big_options #{"selected" if params[:form]=='docs'}" } %></li>
    </ul>
  </div>

  <% form_for(prepare_for_form(Post.new, :parent_id => @post.id), :html => { :multipart => true, :id => "reply-form" }) do |f| -%>
	
  <div id="new_photo_big_form" <%= 'style="display: none;"' if (params[:form] != 'photos' && params[:form] != 'docs') %>>
    <%= render :partial => "posts/form_attachments", :object => f %>
  </div>
  <div id="big_textarea_div" >
    <textarea id="big_textarea" name="post[text]" class="big_post_text"><%=params[:post_text]%></textarea>
	</div>	
  <%if @show_view%>
    <%= hidden_field_tag :show, "true"%>
  <%end%>
  <%= f.hidden_field :parent_id %>
  <div class="float margin-up">
    <button type="submit"><%=t("button.create")%></button>
  </div>
<% end -%>
</div>
</div>
