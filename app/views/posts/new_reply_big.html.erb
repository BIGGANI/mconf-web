<% menu :posts %>

<div id="new_thread_big">

<h3>Reply to <%= @post.title %> BIG</h3>
  <div id="post-buttoms" class="actions">
    <ul>
      <li><%= link_to 'Comment', new_space_post_path(@space, :reply => @post.id), { :id => 'new_comment_big_link',:class =>"big_options #{"selected" if (!params[:form] || params[:form]=='')}" } %></li>
      <li><%= link_to 'Photos', new_space_post_path(@space, :reply => @post.id, :form => "photos"),  { :id => 'new_photo_big_link',:class =>"big_options #{"selected" if params[:form]=='photos'}" } %></li>
      <li><%= link_to 'Docs', new_space_post_path(@space, :reply => @post.id, :form => "docs"), { :id => 'new_doc_big_link',:class =>"big_options #{"selected" if params[:form]=='docs'}" } %></li>
    </ul>
  </div>

<% form_for([ @space, Post.new ], :html => { :multipart => true, :id => "reply-form" }) do |f| -%>
	
  <div id="new_photo_big_form" <%= 'style="display: none;"' if (params[:form] != 'photos' && params[:form] != 'docs') %>>
    <%= render :partial => "posts/form_photo", :object => f %>
  </div>

    <textarea id="big_textarea" name="post[text]" class="big_post_text"><%=params[:post_text]%></textarea>
		
  <%if @show_view%>
    <%= hidden_field_tag :show, "true"%>
  <%end%>
  <%= hidden_field_tag "post[parent_id]", @post.id%>
  <div class="float">
  <%= image_submit_tag "buttons/create.png" %>
  </div>
<% end -%>
</div>