<% content_for :javascript do %>
 $(".edit_reply_options").click(function(){
 	$(".edit_reply_options").removeClass("selected");
	$(this).addClass("selected");});
<% end %>

<div id="edit_reply">
<h3>Edit comment</h3>
  <div id="post-buttoms" class="actions">
    <ul>
      <li><%= link_to 'Comment', space_posts_path(@space, :edit => params[:edit]), { :id => 'new_comment_link',:class =>"edit_reply_options #{"selected" if (!params[:form] || params[:form]=='')}" } %></li>
      <li><%= link_to 'Photos', space_posts_path(@space, :edit => params[:edit], :form => 'photos'), { :id => 'new_photo_link',:class =>"edit_reply_options #{"selected" if params[:form]=='photos'}" } %></li>
      <li><%= link_to 'Docs', space_posts_path(@space, :edit => params[:edit], :form => 'docs'), { :id => 'new_doc_link',:class =>"edit_reply_options #{"selected" if params[:form]=='docs'}" } %></li>
	</ul>
  </div>
<% form_for([ @space, post ], :id => "edit-form", :html => { :multipart => true }) do |f| -%>

  <div id="new_photo_form" <%= 'style="display: none;"' if params[:form] != 'photos' %>>
    <%= render :partial => "posts/form_photo", :object => f %>
  </div>
	
  <div id="new_doc_form" <%= 'style="display: none;"' if params[:form] != 'docs' %>>
    <%= render :partial => "posts/form_doc", :object => f %>
  </div>
	
    <%= f.text_area :text%>
    
    <%= image_submit_tag "buttons/update.png" %>
  <% end -%>
</div>