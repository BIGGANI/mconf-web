<div id="post_with_children">
  <div id="parent_<%=@post.id%>" class="thread-title">
  	<div class="thread_options">
	  <ul>
		<li><%=link_to image_tag("icons/cancel.png", :alt => "delete" ), space_post_path(@space,@post),{ :class => 'delete_thread', :method => :delete, :title => "delete" }if @post.authorizes?(:delete, :to => current_user)%></li>
		<li><%=link_to image_tag("icons/pencil.png", :alt => "edit" ), get_edit_route(@post), {:name => @post.id, :class => 'edit_post_link', :title => "edit"} if @post.authorizes?(:update, :to => current_user) %></li>
	  </ul>
	</div>
  	<h2><%=image_tag("icons/comment.png")%><%=link_to (@post.title, space_post_path(@space,@post))%>
	<span class="updated"> Updated <%=time_ago_in_words(@post.updated_at)%> ago</span>
	</h2>
	
  </div>

  <div class="thread-body">
  <%=render :partial => "posts/parent_post" , :locals => { :post =>  @post, :selected_post => false}%>
  </div>		
  <div class="odd-posts">
   <%for comment in @posts%>
	<%=render :partial => "post" , :locals => { :post =>  comment, :selected_post => false}%>
   <%end%>
  </div>

</div>

