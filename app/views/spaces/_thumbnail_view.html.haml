#public-spaces.content-block
  .content-block-header
    %h3= t('space.public.other')
  .content-block-middle.clearfix
    %ul.space-thumbnail-list
      - @public_spaces.each do |space|
        %li{ :class => "space-item space-thumbnail #{@user_spaces.include?(space) ? 'my-space' : 'not-my-space'}", :name => space.permalink }
          = render "spaces/space_thumbnail", :space => space

