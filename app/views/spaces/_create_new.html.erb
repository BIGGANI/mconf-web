<h3>Publish new at home</h3>

<% form_for(:new, :url => space_news_index_path(@space)) do |f| %>
  
  <p>
    <label for="title">Title:</label><%= f.text_field :title %>
  </p>
  
  <p>
    <label for="text">Description:</label><br/>
    <%= f.text_area :text, :class => "span-6"%>
  </p>
  <p>
  	
    <%= submit_tag 'Create' %>
  </p>

<% end %>