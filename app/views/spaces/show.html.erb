<% content_for :search do  %>
  <% form_tag(search_users_path(@space), :method => 'get') do %>
      <%= text_field_tag :query, params[:query] %>
      <button>Search</button>
  <% end %>
<%end%>

<% content_for :sidebar do  %>
  <div id="join"><button>Join this Space</button></div>
	<h3>About <em><%=@space.name%></em></h3>
	<p><%=image_tag("test_small.jpg",:align=>"left")%><%= sanitize(space.description) if space.description.present? %></p>
	<div id="inc-events">
        <h5><%=image_tag("icons/date.png",:class=>"icon")%> Incoming Events</h5>

 <ul>  
  <% for event in @incoming_events -%>
    <li class="event">
        <h5><%=sanitize(event.title)%></strong></h5>
		<p><%=event.start_date.to_formatted_s(:short)%> - <%=event.end_date.to_formatted_s(:short)%></p>
    	<%=link_to "", space_event_path(@space,event)%>
    </li>
  <% end -%>
 </ul> 
        <%= link_to "Read more", space_events_path(@space), :class => "read_more_link" if space.authorizes?([:read, :content], :to => current_user) %>
  </div>
<% end %>

<div id="latest_news">
        <h3><%=image_tag("icons/information.png")%> Latest News</h3>
  <% for news in @lastest_news -%>
    <div class="new">
        <p>
        	<strong><%=sanitize(news.title)%></strong><span class="updated"> Updated <%=time_ago_in_words(news.updated_at)%> ago</span><br />
				  <%=sanitize(news.text)%>
			  </p>
    </div>
  <% end -%>
        <%= link_to "Read more", space_news_index_path(@space), :class => "read_more_link" if space.authorizes?([:read, :content], :to => current_user)%>
</div>

<div id="latest_posts">
        <h3><%=image_tag("icons/comment.png")%> Latest Posts</h3>
  <% for post in @lastest_posts -%>
    <div class="post">
        <p><strong><%=sanitize(post.title)%></strong><span class="updated"> Updated <%=time_ago_in_words(post.updated_at)%> ago</span></p>
    </div>
  <% end -%>
        <%= link_to "Read more", space_posts_path(@space), :class => "read_more_link" if space.authorizes?([:read, :content], :to => current_user)%>
</div>

<div id="latest_users">
        <h3><%=image_tag("icons/user.png")%> Latest Users</h3>
  <% for user in @lastest_users -%>
    <div class="user">
    	<%if space.authorizes?([:read, :performance],:to=> current_user) or current_user.fellows.include?(post.author)%>
				<p><%= link_logotype(user, :size => 48,:url => user_profile_path(user)) %></p>
			<%else%>
				<p><%=logotype(user, :size=>48)%> <%=user.name%></p>
			<%end%>        
    </div>
  <% end -%>
    <%= link_to "Read more", space_users_path(@space), :class => "read_more_link" if space.authorizes?([:read, :performance], :to => current_user)%>
</div>

	
	
