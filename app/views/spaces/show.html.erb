<% content_for :search do  %>
  <% form_tag(search_users_path(@space), :method => 'get') do %>
      <%= text_field_tag :query, params[:query] %>
      <button>Search</button>
  <% end %>
<%end%>

<% content_for :sidebar do  %>
  <%= link_to "Join this space!", ""%>
	<h4>Welcome!</h4>
	<p><%= sanitize(space.description) if space.description.present? %></p>
	<div id="lastest_users">
        <h3>Incoming Events</h3>
  <% for event in @incoming_events -%>
    <div class="event">
        <b><%=sanitize(event.title)%></b><br/>
				<%=event.start_date.to_formatted_s(:short)%> - <%=event.end_date.to_formatted_s(:short)%>
    </div>
  <% end -%>
        <%= link_to "Read more", space_events_path(@space), :class => "read_more_link" if space.authorizes?([:read, :content], :to => current_user) %>
  </div>
<% end %>

<div id="lastest_posts">
        <h3>Lastest Posts</h3>
  <% for post in @lastest_posts -%>
    <div class="post">
        <b><%=sanitize(post.title)%></b> Updated <%=time_ago_in_words(post.updated_at)%> ago
    </div>
  <% end -%>
        <%= link_to "Read more", space_posts_path(@space), :class => "read_more_link" if space.authorizes?([:read, :content], :to => current_user)%>
</div>

<div id="lastest_users">
        <h3>Lastest Users</h3>
  <% for user in @lastest_users -%>
    <div class="user">
    	<%if space.authorizes?([:read, :performance],:to=> current_user) or current_user.fellows.include?(post.author)%>
				<p><%= link_logotype(user, :size => 48, :url => user_profile_path(user)) %></p>
			<%else%>
				<p><%=logotype(user, :size=>48)%> <%=user.name%></p>
			<%end%>        
    </div>
  <% end -%>
    <%= link_to "Read more", space_users_path(@space), :class => "read_more_link" if space.authorizes?([:read, :performance], :to => current_user)%>
</div>

	
	
