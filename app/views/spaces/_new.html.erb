<h1>New Space</h1>

<% form_for :space, :url => spaces_path() do |f|%>
  <p>
    <label for="name">Name</label><br/>
    <%= f.text_field :name %>
  </p>
	
	<p>
    <label for="description">Description</label><br/>
    <%= f.text_area(:description) %>
  </p>
	
	<p>
    <label for="public">Public space</label><%= f.check_box(:public) %>
  </p>
	
	<%unless logged_in?%>
		<ul>
	  	<li><%=link_to "Login", new_space_path(), :id => "create_and_login_link" %></li>
	    <li><%=link_to "Register", new_space_path(:register => true), :id => "create_and_register_link"%></li>
		</ul>
	  
		<%if params[:register]%>
		  <%= render :partial => 'register_fields' %>
		<%else%>	
	    <%= render :partial => 'login_fields' %>
	  <%end%>
	<%end%>
	<%= submit_tag "Create" %>
<%end%>
	
  