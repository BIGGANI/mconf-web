#latest-posts.content-block
  .content-block-header
    = image_tag("icons/comment.png")
    %h3
      = link_to t('post.latest'), space_posts_path(@space)

  .content-block-middle
    - if @latest_posts.empty?
      %span= t('post.none_recent')
    - else
      - for post in @latest_posts
        .post-wrapper
          .logo-in-thread
            = # link_logo(post.author, :size => 32, :url => user_path(post.author), :title => post.author.name).html_safe # LOGO-REMOVED
            = link_logo_image(post.author, :size => '32', :url => user_path(post.author), :title => post.author.name) if post.author
          .post-title-wrapper
            = link_to(first_words(post.title, 40), space_post_path(@space, post), :class => 'post-title')
            = attachment_icon(attachment_name(post)) if has_attachments(post)
            %span= t('by')
            = link_to(post.author.name, user_path(post.author), :class => 'post-author') if post.author
            %span.updated-at= t('updated_time_ago', :time => time_ago_in_words(post.updated_at))
          .post-text
            = first_words(strip_tags(post.text), 100)

  .content-block-footer
    = link_to feed_icon, space_posts_path(@space, :format => :atom)
    = link_to t('read_more'), space_posts_path(@space)
