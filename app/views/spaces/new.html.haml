= render_page_title t('space.create_own')

#create-space
  - @files = get_default_logo_files
  - selected = rand(@files.length)

  .left-column
    = simple_form_for @space, :html => {:method => :post, :multipart => true}, :url => spaces_url do |f|
      #new-space-basic-info
        = f.hidden_field "rand_value"
        = f.input :name, :label => t('name.one')
        = f.input :description, :as => :text, :label => t('description')
        = f.input :public, :hint => t("tooltip.public_space")
      #new-space-webconf-area
        %h3= t('space.create.webconf_options')
        = f.input :_attendee_password, :as => :showable_password, :label => t('activerecord.attributes.spaces.attendee_password')
        = f.input :_moderator_password, :as => :showable_password, :label => t('activerecord.attributes.spaces.moderator_password')
      = hidden_field "space", "image", :value => "/default_space_logos/" + @files[selected].to_s, :name => "space[default_logo]"
      = f.button :submit, t("button.create"), :class => "btn"

  .right-column

    #selected-logo.content-block
      .content-block-header
        %h3= t('space.logo_selected.default_message')
        = help_icon t("tooltip.update_logo")
      .content-block-middle
        = image_tag ("/assets/default_space_logos/" + @files[selected].to_s), { :id => "selected-logo-image" }
        .selectable-buttons.btn-group{:"data-toggle" => 'buttons-radio'}
          = link_to t('space.logo_selected.open_gallery'), '#logos-gallery', :class => 'btn'
          = link_to t('space.logo_selected.text_logo'), '#logos-text', :class => 'btn'
          = link_to t('space.logo_selected.upload_logo'), '#logos-upload', :class => 'btn'

    #logo-selection-options.selectable-buttons-target

      #logos-upload
        = simple_form_for :logo, :html => {:method => :post, :id => "select_logo_form", :multipart => true, :class => "form-for-crop"}, :url => {:controller => :logos, :action => :new, :upload => :yes} do |f|
          = link_to t("space.logo_selected.upload_logo_text"), '#logo_media', :"data-open-file" => true
          = f.input :media, :as => :file
          = f.hidden_field "rand"

      #logos-text
        %label= t('space.logo_selected.enter_text')
        %form.form-horizontal
          .input-append
            = text_field_tag :text_logo, nil, :id => "logos-text-input"
            = button_tag t("space.logo_selected.generate_logo"), :id => "logos-text-submit", :class => "btn"
        #logos-text-generated

      #logos-gallery
        %ul
          - for file in @files
            %li= link_to (image_tag "/assets/default_space_logos/" + file.to_s), '#'
