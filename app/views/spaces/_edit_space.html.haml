#space-conf
  %h3.center
    = t('space.configuration')

.right-column
  #logo_image
    = logo_image(@space, :size => '168x128', :class => 'profile-logo')
  #change_logo
    = simple_form_for @space, :url => space_path, :html => { :multipart => true, :class => 'form-for-crop' } do |f|
      = link_to t('change_pic'), '#space_logo_image', :"data-open-file" => true
      = f.input :logo_image, :as => :file

= simple_form_for @space, :url => space_path, :html => { :method => :put, :multipart => true, :class => 'single-column' } do |f|
  #edit-space-basic-info.left-column
    = f.input :name, :label => t('name.one')
    = f.input :description, :label => t('description'), :as => :text, :input_html => { :rows => 5 }
    = f.input :public, :hint => t("tooltip.public_space")
    #edit-space-webconf-area{ :class => "#{'hide' if @space.public?}" }
      %h3= t('space.create.webconf_options')
      = f.simple_fields_for :bigbluebutton_room do |bbb_room|
        = bbb_room.input :attendee_password, :as => :showable_password, :label => t('activerecord.attributes.spaces.attendee_password')
        = bbb_room.input :moderator_password, :as => :showable_password, :label => t('activerecord.attributes.spaces.moderator_password')

  = f.button :wrapped, :value => t("button.update")