- spaces_menu_at :home
= render :partial => 'spaces/menu'

- unless @current_events.empty?
  #current-events.content-block
    .content-block-header
      %h3= t('event.now')
    .content-block-middle
      - for event in @current_events do
        .events-hapenning-now
          = render :partial => "events/event", :locals => { :event => event }

.content-block
  .content-block-header
    %h3= t('space.description')
  .content-block-middle
    = @space.description

- if @news_to_show
  = render :partial => 'latest_news'

= render :partial => 'latest_posts'

= render :partial => 'latest_users'
