<h1><%= @title %></h1>
<%if @container %>
<%= collection_select(:users, :blogs, @container.container_posts, :id, :title, options ={}, :onchange => "alert(Hola);") %>
<%end%>
<table>
  <tr>
    <th>Title</th>
  </tr>

<% for post in @posts -%>
  <tr>
    <td><%=sanitize post.title %></td>
	<!--
	<td><%= link_to 'Show Blog', space_blogs_path(@container) %></td>
	-->
    <td><%= link_to 'Show', blog_path(post.content_id) %></td>
    <td><%= link_to 'Edit', edit_post_url(post) %></td>
    <td><%= link_to 'Destroy', posts_url, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end -%>
</table>

<br />

