= simple_form_for :session, :url => session_url(:protocol => current_site.protocol), :html => { :class => 'form-inline' } do |f|
  = f.input :login, :label => t('login.email_or_login'), :required => true, :autofocus => true
  = f.input :password, :label => t('login.password'), :required => true
  = f.button :submit, t("login.one"), :class => "btn"
  .remember-me
    = check_box_tag ('remember_me')
    %label{:for => "remember_me"}= t('remember_me')
