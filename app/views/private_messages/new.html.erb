<%if request.xhr?%>
  <div id="lightbox-logo"><span><%= image_tag("bola_global_peque.png",:class=>"icon")%><%= t('vcc') %></span></div>
<%else%>
  <h3 id="feedback_no_lightbox"><%= t('feedback.send_us') %></h3>
<%end%>

<% form_for(:private_message, :url => user_messages_path(current_user)) do |f| %>
	<%= f.error_messages %>
	<div>
    <label for="Title"><%= t('title') %>:</label>
    <%= f.text_field :title, :size =>25  %>
  </div>
	<br/>
	<div>
    <label for="Body"><%= t('body') %>:</label><br/>
    <%= f.text_area :body, :class => "span-6"  %>
  </div>
  <%= hidden_field_tag "private_message[receiver_id]", params[:receiver]%>
  <div class="margin-up">
  	<button type="submit" class="basic_button blue_button"><%=t('button.send')%></button>
  </div>
<% end %>
