- private_messages_menu_at(:compose)

= render_page_title t('.title')
= render :partial => 'private_messages/menu'

- if current_user.fellows.empty?
  = t("message.private.cant")
- else
  #priv-msg
    %h3
      = t('message.private.send')
    = simple_form_for @private_message, :url => messages_path do |f|
      = f.input :users_tokens, :label => t('message.to'), :required => true
      %span{:data => { :pre => @receivers.to_json }, :id => "private-message-prepopulate"}
      %div{:style => "clear: both;"}
      = f.input :title, :label => t('title'), :size => 25
      = f.input :body, :as => :text, :label => t('body')
      = f.hidden_field :parent_id, :value => @private_message.parent_id if @private_message
      = f.button :wrapped, :cancel => messages_path, :value => t("button.send")
