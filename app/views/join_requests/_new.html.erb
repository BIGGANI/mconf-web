<div id="lightbox-logo"><span><%= image_tag("bola_global_peque.png",:class=>"icon")%>Virtual Conference Centre > Join</span></div>

<div id="join_form">


<%if !space.public?%>
  <p class="note"><%=space.name%> is a private space. Send a join request to the administrators of this space to let you in.</p>
<%end%>

<%if logged_in?%>
  <% form_tag space_join_requests_path(space) do %>
    <%= submit_tag "Send join request" %>
  <% end %>
<%else%>
  <p class="note">You need to be logged in to send a join request.</p>
	<% form_tag space_join_requests_path(space) do %>
	    <div class="options">
			<ul>
		      <li><%= link_to "Login", space_join_requests_path(space), {:class => "join_and_login_link", :name => space.permalink} %></li>
		      <li> | </li>
			  <li><%= link_to "Register", new_space_join_request_path(:register => true), {:class => "join_and_register_link", :name => space.permalink}  %></li>
		    </ul>
		</div>
	    <div class="margin-up">
	      <%fields_for :user do |user|%>
	        <label for="email">Email</label><br/>
	        <%= user.text_field :email %><br/>
	
	        <label for="Password">Password</label><br/>
	        <%= user.password_field 'password' %><br/>
	
	        <%if params[:register]%>
	          <label for="Confirm Password">Confirm Password</label><br/>
	          <%= user.password_field 'password_confirmation' %><br/>
	          <label for="login">Full Name</label><br/>
	          <%= user.text_field :login %><br/>
	          <div id="captcha"><%= show_simple_captcha(:object=> :user) %> </div>
	          <%= hidden_field_tag "register", params[:register] if params[:register]%>
	        <%end%>
	        <%end%>
	  </div>		
	  <div class="margin-up">
	    <%= submit_tag "Send join request" %>
	  </div>
	<% end %>
<%end%>
</div>
