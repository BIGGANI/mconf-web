
<% @page_title = "Editing a group in the Space"%>
<%= error_messages_for :group %>

<div id="yui-main">
<div class="yui-b main_column">
	
<title>Add Users to the Group</title>

<br/>

<% rounded(:class => "tips") do %>
	<div id="add_usuarios">
			<span>Users in the space</span>
			<div id="select_users_from_space" class="select_users">
				<%= select 'users',
				           'id',
				           @users.collect { |u| [ u.login, u.id ] },
				           {},
				           { :multiple => true,
				             :size     => 10,
						 	 :style => "width: 170px" } %>
			</div>
			
			<div id="buttons_register">
				<%= link_to_function "Add to the Group","add_to_the_group()", :class => "secund" %><br/>
			</div>			
		</div>
<%end%>

<% rounded(:class => "tips") do %>
<div id="space_users">

    <% form_tag(space_group_path(@space.id, @group.id),{:method => :put, :name=>'create_group_form',:style => "display: inline;", :onsubmit=>"selectAllOptions();"} ) do %>

		<%= render :partial => 'form_groups'%>
		
	<%=submit_tag%>
	<%end%>

<%end%>	
</div>
</div>
</div>


