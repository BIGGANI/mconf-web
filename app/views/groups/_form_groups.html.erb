    <div id="users_group">
      <div id="group_name">	
	    Group Name <%= text_field_tag "group_name", @group.name%>
	  </div>	
		<div id="group_title">Users in the group</div>
		<div id="users_group_select" class="select_users">
			<%= select 'group_users',
			           'id',
			           @group.users.collect { |u| [ u.login, u.id ] },
			           {:include_blank => false},
			           { :multiple => true,
			             :size     => 10,
						 :style => "width: 170px" } %>
			
		<div class="buttons_remove">
			<%= link_to_function "Remove","remove_from_group()", :class => "secund" %><br/><br/>
		</div>
			  <%=submit_tag%>
      </div>

	</div>
	