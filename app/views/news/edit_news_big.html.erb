<div id="news_big">

<h3><%= t('news.edit') %></h3>

<% form_for(@edit_news, :url => space_news_path(@space, @edit_news)) do |f| %>
  
  <p>
    <label for="title"><%= t('title') %>:</label><%= f.text_field :title, :class => "big_news_title" %>
  </p>
  
  <label for="text"><%= t('description') %>:</label><br/>
  <div id="big_textarea_div" >
    <%= f.text_area :text, :class => "big_news_text"%>
  </div>
    
    <%= submit_tag t('update') %>

<% end %>

<%= link_to t('news.publish_another'), space_news_index_path(@space)%>

</div>