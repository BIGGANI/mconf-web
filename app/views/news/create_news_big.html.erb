<div id="news_big">

	<h3>Publish news at home</h3>
	
	<% form_for(:new, :url => space_news_index_path(@space)) do |f| %>
	  
	  <p>
	    <label for="title">Title:</label><%= f.text_field :title, :class => "big_news_title" %>
	  </p>
	  
    <label for="text">Description:</label><br/>
		<div id="big_textarea_div" >
      <%= f.text_area :text, :class => "big_news_text"%>
    </div>
		
	  <div class="margin-up">
		  <%= image_submit_tag "buttons/create.png" %>
	  </div>
	
	<% end %>

</div>