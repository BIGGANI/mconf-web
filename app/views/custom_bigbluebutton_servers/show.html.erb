<%= content_for :search do  %>
  <%= render :partial => 'search/form' %>
<%end%>

<%= render :partial => 'manage/menu' %>


<div id="manage">
    <p id="notice"><%= notice %></p>
    <p>
      <color><b><%= BigbluebuttonServer.human_attribute_name(:name) %>:</color>
      <i><%= @server.name %></i></b>
    </p>
    <ul>
      <li>
        <b><color><%= BigbluebuttonServer.human_attribute_name(:url) %>:</color></b>
        <%= @server.url %>
      </li>

      <li>
        <b><color><%= BigbluebuttonServer.human_attribute_name(:salt) %>:</color></b>
        <%= @server.salt %>
      </li>
      
      <li>
        <b><color><%= BigbluebuttonServer.human_attribute_name(:version) %>:</color></b>
        <%= @server.version %>
      </li>
    </ul>
    
    <br/>      

    <%= link_to t('edit'), edit_bigbluebutton_server_path(@server), :class => 'basic_button small_button pale_button' %>
    <%= link_to t('room.other'), bigbluebutton_server_rooms_path(@server.id), :class => 'basic_button small_button pale_button' %>
    <br/><br/>
    <%= link_to t('back'), bigbluebutton_servers_path, :class => 'basic_button small_button pale_button' %>
</div>
