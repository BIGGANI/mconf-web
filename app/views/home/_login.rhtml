	<% if logged_in? %>
	
		<div id="menu_logout">
			
			<ul>
				<li><%= link_to  h(current_user.login), user_profile_path(current_user), :class=>'username' %></li>
				<li><%= link_to 'Logout', logout_path , :method=> 'get', :class=>'logout'%></li>		
			</ul>
		</div>

	<% else%>

		<div id="menu_login">
			<ul>
				<li><%= link_to 'Login', login_path, :method=> 'get' %></li>
				<li><%= link_to 'Register', signup_path,  :method=> 'get'%></li>
			</ul>
		</div>

	<% end %>



