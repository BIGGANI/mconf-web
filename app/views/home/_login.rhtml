	<% if logged_in? %>
	
		<div id="menu_logout">
			
			<ul><li><%= link_to 'about GLOBAL', signup_path,  :method=> 'get' , :class=>'main_title' %></li>
				<li><%= link_to 'Project Partners', signup_path,  :method=> 'get' , :class=>'main_title'%></li>
				<li><%= link_to 'Logout', logout_path , :method=> 'get', :class=>'main_title'%></li>
