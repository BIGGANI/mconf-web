
<div id="botones">

<% if logged_in? && current_user.superuser==true%>
 	 
	 <div id="bot_administrador">
	     <ul id="nav">
		 	<%= nav_tab "Home", { :url => space_path(@space.id)} %>
		 	<%= nav_tab "MyProfile", { :url => space_user_profile_path(@space.id, current_user.id)} %>
		    <%= nav_tab "Events", { :url => container_events_path(:container_id => @space.id, :container_type => :spaces)} %>
		 	<%= nav_tab "Posts", { :url => container_events_path(:container_id => @space.id, :container_type => :spaces)} %>
		 	<%if @space.id!=0%>
				<%= nav_tab "People", { :url => manage_users_path(:container_id => @space.id, :container_type => :spaces)} %>
		 		<%= nav_tab "Groups", { :url =>  show_groups_path(:container_id => @space.id, :container_type => :spaces)} %>
		 	<%end%>
			<%if current_user.superuser==true%>
				<%= nav_tab "Manage", { :url => {:controller=>'spaces', :action=>'index', :container_id => @space.id}} %>		 	
			<%end%>
	     </ul>
	 </div>
  
<% else %>
	 <ul id ="nav">
      	    <%= nav_tab "Home", { :url => space_path(0)} %>
		    <%= nav_tab "Events", { :url => container_events_path(:container_id => 0, :container_type => :spaces)} %>
		 	<%= nav_tab "Posts", { :url => container_events_path(:container_id => 0, :container_type => :spaces)} %>
	 </ul>
  
  
<% end %>

</div>