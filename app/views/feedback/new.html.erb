

<h3 >Send Us Feedback</h3>

<%form_for(:feedback, :url => feedback_index_path()) do |f| -%>
  
	<p>
    <label for="subject">Subject</label><br/>
    <%= f.text_field :subject, :size => 25 %>
  </p>
	
	<p>
    <label for="body">Body</label><br/>
    <%= f.text_area :body %>
  </p>
	
	<%if logged_in?%>		
		<%= hidden_field_tag 'feedback[from]', current_user.email%>	
	<%else%>		
		<p>
    	<label for="from">E-mail</label><br/>
			<%= f.text_field :from, :size =>25 %>    
  	</p>
	<%end%>
	
  <%= submit_tag "Create" %>
<% end -%>
