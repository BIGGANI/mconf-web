<%if request.xhr?%>
  <div id="lightbox-logo"><span><%= image_tag("bola_global_peque.png",:class=>"icon")%>Virtual Conference Centre</span></div>
<%else%>
  <h3 id="feedback_no_lightbox">Send us feedback</h3>
<%end%>

<%form_tag(feedback_index_path()) do -%>
  <div id="feedback_form">
	<p class="note">
		Help us improve VCC. Please send your comments, problems and suggestions. We will try to answer as soon as possible.
	</p>
	<p>
      <label for="subject">Subject:</label>
      <%= text_field_tag 'subject',params[:subject].present? ? params[:subject] : nil, :size => 25 %>
    </p>
	
	<p>
    <label for="body">Body:</label>
    <%= text_area_tag 'body', params[:body].present? ? params[:body] : nil,:id => "feedback_textarea" %>
  </p>
	
	<%if logged_in?%>		
		<%= hidden_field_tag 'from',current_user.email%>	
	<%else%>		
		<p>
    	<label for="from">E-mail:</label>
			<%= text_field_tag 'from', params[:from].present? ? params[:from] : nil, :size =>25 %>    
  	</p>
	<%end%>
	
  <%= submit_tag "Send Feedback" %>
	</div>
<% end -%>
