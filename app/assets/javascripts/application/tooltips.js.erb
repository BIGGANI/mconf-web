$(document).ready(function() {

  // Inserts a tooltip for every element with the class 'tooltipped'
  // Uses qTip
  $(".tooltipped").each(function() {
    var obj = $(this);
    if (obj.hasClass("downwards")) {
      my = 'top';
      at = 'bottom';
    } else {
      my = 'bottom';
      at = 'top';
    }
    if (obj.hasClass("leftwards")) {
      my += ' right';
      at += ' left';
    } else if (obj.hasClass("rightwards")) {
      my += ' left';
      at += ' right';
    } else {
      at += ' center';
      my += ' center';
    }
    obj.qtip({
      position: {
        my: my,
        at: at,
        target: obj,
        adjust: { method: 'shift' }
      },
      style: {
        classes: 'ui-tooltip-youtube ui-tooltip-mconf'
      }
    });
  });

  // A tooltip in the format of a label, inside the component (used mainly
  // for images)
  $(".tooltipped-label").each(function() {
    var obj = $(this);
    if (obj.hasClass("downwards")) {
      at = 'bottom center';
    } else {
      at = 'top center';
    }
    obj.qtip({
      position: {
        my: 'center',
        at: at,
        target: obj,
        adjust: { method: 'shift' }
      },
      style: {
        classes: 'ui-tooltip-youtube ui-tooltip-mconf-label'
      }
    });
  });

});