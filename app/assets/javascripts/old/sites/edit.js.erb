$(document).ready(function() {

  if (isOnPage('sites', 'edit|update')) {

  $("#site_email_password_show").livequery('click', function(event) {
    if ($(this).is(':checked')) {
      mconf.ShowablePassword.changeInputType("#current_site_email_password", 'text');
    } else {
      mconf.ShowablePassword.changeInputType("#current_site_email_password", 'password');
    }
  });

  }

});
